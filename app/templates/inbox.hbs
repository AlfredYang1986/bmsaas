<div class="detail_content_top">
    <div class="detail_page">
        <div class="detail_panel detail_panel_col_between" >
            {{#layout-push direction='row'}}
                    <div class="time-select today">
                        <p>今天<span>(9)</span></p>
                    </div>
                    <div class="time-select before ">
                        <p>以前<span>(300)</span></p>
                    </div>
            {{/layout-push}}
        </div>
        <div class="detail_page table-header">
            {{#layout-push direction='col'}}
                {{#layout-push direction='row' split=true}}
                    {{#each model as |item|}}
                        <span>{{item.title}}</span>
                    {{/each}}
                {{/layout-push}}
            {{/layout-push}}
        </div>
        <div class="inbox-table">
            <div class="detail_page table-body">
                    {{#layout-push direction='col'}}
                        {{#layout-push direction='row' split=true}}
                            <span class="email-status">未处理</span>
                            <span class="">08/03（周五）10:30</span>
                            <span class="">北京朝阳区东外56号文创产业园111座</span>
                            <span class="">小明老师带你从新手到高手</span>
                            <span class="">王大槌</span>
                            <span class="">184 9382 7483</span>
                            {{#bs-button classNames="email-option" onClick=(action (mut modal3) true)}}<span>处理</span>{{/bs-button}}
                        {{/layout-push}}
                    {{/layout-push}}
            </div>
            <div class="detail_page table-body">
                    {{#layout-push direction='col'}}
                        {{#layout-push direction='row' split=true}}
                            <span class="email-status">未处理</span>
                            <span class="">08/03（周五）10:30</span>
                            <span class="">北京朝阳区东外56号文创产业园111座</span>
                            <span class="">小明老师带你从新手到高手</span>
                            <span class="">王大槌</span>
                            <span class="">184 9382 7483</span>
                            {{#bs-button classNames="email-option" onClick=(action (mut modal3) true)}}<span>处理</span>{{/bs-button}}
                        {{/layout-push}}
                    {{/layout-push}}
            </div>
        </div>
        {{#bs-modal open=modal3  onHidden=(action (mut modal3) false) as |modal|}}
            <div class="course-reserve-pop-ups">
                {{#modal.header classNames="course-reserve-modal-title"}}
                  <p class="modal-title">
                    课程预约
                </p>
                {{/modal.header}}
                {{#modal.body classNames="course-reserve-modal-body"}}
                   {{#layout-push direction=col}}
                        {{#layout-push direction=col classNames="course-reserve-content"}}
                            {{#layout-push direction=row classNames="line_container"}}
                                <p class="course-reserve-title">提交信息时间</p>
                                <p>2018/08/12</p>
                            {{/layout-push}}
                            {{#layout-push direction=col}}
                                <p class="course-reserve-title">参与內容</p>
                                {{#layout-push direction=row classNames="line_container"}}
                                    <p class="course-reserve-label">类型</p>
                                    <button type="button" class="btn btn-primary">课程预约</button>
                                    <button type="button" class="btn btn-primary">体验报名</button>
                                {{/layout-push}}
                                {{#layout-push direction=row classNames="line_container"}}
                                    <p class="course-reserve-label">课程</p>
                                        <select class="start-time" name="">
                                            <option value="">课程标题</option>
                                            <option value="">2018</option>
                                        </select>
                                {{/layout-push}}
                                {{#layout-push direction=row classNames="line_container"}}
                                    <p class="course-reserve-label">场地</p>
                                        <select class="start-time" name="">
                                            <option value="">场地位置</option>
                                            <option value="">2018</option>
                                        </select>
                                {{/layout-push}}
                                {{#layout-push direction=row classNames="line_container"}}
                                    <p class="course-reserve-label">时间</p>
                                        <select class="start-time" name="">
                                            <option value="">月</option>
                                            <option value="">2018</option>
                                        </select>
                                        <select class="start-time" name="">
                                            <option value="">日</option>
                                            <option value="">2018</option>
                                        </select>
                                        <select class="start-time" name="">
                                            <option value="">时间</option>
                                            <option value="">2018</option>
                                        </select>
                                {{/layout-push}}
                            {{/layout-push}}
                            {{#layout-push direction=col}}
                                <p class="course-reserve-title">参与者信息</p>
                                <p>孩子1</p>
                                {{#layout-push direction=row}}
                                    {{#layout-push direction=col}}
                                        <p>孩子姓名:<span>王大槌</span></p>
                                        <p>生日:<span>2006/12/12</span></p>
                                        <p>渠道:<span>小程序</span></p>
                                    {{/layout-push}}
                                    {{#layout-push direction=col}}
                                        <p>性別:<span>男孩</span></p>
                                        <p>联系方式:<span>18493827483</span></p>
                                    {{/layout-push}}
                                {{/layout-push}}
                            {{/layout-push}}
                            {{#layout-push direction=col}}
                                <button type="button" class="btn btn-primary">取消</button>
                                <button type="button" class="btn btn-primary">确定</button>
                            {{/layout-push}}
                        {{/layout-push}}
                   {{/layout-push}}
                {{/modal.body}}
                {{#modal.footer}}
                  {{#bs-button onClick=(action modal.close)}}Cancel{{/bs-button}}
                  {{#bs-button type="danger"}}Delete{{/bs-button}}
                  {{#bs-button type="success" onClick=(action modal.submit)}}Save{{/bs-button}}
                {{/modal.footer}}
            </div>

        {{/bs-modal}}
    </div>
</div>
{{outlet}}
