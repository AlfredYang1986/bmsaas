{{#if selectSort}}
    <section id="select-class" class="line_container_mid edit_page_top_margin">
        <div class="edit-class edit_panel edit_first_panel ">
            {{#layout-push direction=col classNames="edit-class-card"}}
                {{#layout-push direction=col classNames="v_pusht"}}
                        <p class="class-head-title">您的体验属于哪一个分类？</p>
                        <p class="class-sub-title">请选择最能描述您的旅程体验的类别。</p>
                {{/layout-push}}
                {{#if noSortChoose}}
                    {{#layout-push direction="row" classNames="sort-name"}}
                        <p {{action 'activitySort' argument}}>活动</p>
                        <p {{action 'experienceSort'}}>体验课</p>
                    {{/layout-push}}
                {{/if}}

                {{#if activity}}
                    {{#layout-push direction="row" classNames="sort-name"}}
                        <p {{action 'activitySort'}} class="sort-name-active">活动</p>
                        <p {{action 'experienceSort'}}>体验课</p>
                    {{/layout-push}}
                    {{#layout-push direction="col" classNames="sort-sub-name"}}
                        <p>为活动选择类别</p>
                        {{#layout-push direction="row" classNames="sort-sub-checkbox"}}
                            <p><input type="checkbox" name="vehicle" value="展览" />展览</p>
                            <p><input type="checkbox" name="vehicle" value="赛事"/>赛事</p>
                            <p><input type="checkbox" name="vehicle" value="亲子"/>亲子</p>
                        {{/layout-push}}
                    {{/layout-push}}
                {{/if}}
                {{#if experience}}
                    {{#layout-push direction="row" classNames="sort-name"}}
                        <p {{action 'activitySort'}} >活动</p>
                        <p {{action 'experienceSort'}} class="sort-name-active">体验课</p>
                    {{/layout-push}}
                    {{#layout-push direction="col" classNames="sort-sub-name"}}
                        <p>为体验课选择详细类目，这样便于用户快速查找您的体验服务。</p>
                        {{#layout-push direction="row" classNames="sort-sub-select"}}
                            <select class="" name="">
                                <option value="">请选择</option>
                                <option value="">科学创新</option>
                                <option value="">科学创新</option>
                            </select>
                            <select class="" name="">
                                <option value="">请选择</option>
                                <option value="">STEM</option>
                                <option value="">STEM</option>
                            </select>
                            <select class="" name="">
                                <option value="">请选择</option>
                            </select>
                        {{/layout-push}}
                    {{/layout-push}}
                {{/if}}
            {{/layout-push}}
            {{#layout-push direction=col }}
                <button class="nav_save_btn menu_button_between" {{action 'sortNext'}}>下一步</button>
            {{/layout-push}}
        </div>
    </section>
{{/if}}

{{#if selectTitle}}
