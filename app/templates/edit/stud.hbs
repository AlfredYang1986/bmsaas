
{{#layout-push direction='row' split=true classNames='edit_nav' }}
	<span classNames='edit_nav_title'>编辑学员信息</span>
	<span>
		{{#if isPushing}}
			{{#link-to 'stud' class="edit_nav_btn btn_cacel"}}
				取消
			{{/link-to}}
		{{else}}
			{{#link-to 'detail.stud' model.stud.id class="edit_nav_btn btn_cacel"}}
				取消
			{{/link-to}}
		{{/if}}
		<button class="edit_nav_btn btn_save" {{action 'saveInputBtnClicked'}}>提交</button>
	</span>
{{/layout-push}}

{{#layout-push direction='row' split=true classNames='edit_container experience-content' }}
	<ul class="edit_left_nav">
		<li class="left_bar_item">
			<a class="edit_left_menu_text" href="#kid-info">孩子信息</a>
		</li>
		<li class="left_bar_item">
			<a class="edit_left_menu_text" href="#par-story">家长信息</a>
		</li>
	</ul>
	<div class="input_container">
		<section id="kid-info" class="kids_info stu_section">
			{{#layout-push direction="col" split=true classNames='input_area area-margin-bottom' }}
				<p class="edit_title">学员真实姓名</p>
				{{input type="text" class="edit_input kid_name" maxlength='8' value=bm_stud_service.stud.name}}
				{{!-- <span class="edit_hint">{{chd_name_length}}/8</span> --}}
			{{/layout-push}}

			{{#layout-push direction="col" split=true classNames='input_area area-margin-bottom' }}
				<p class="edit_title">出生日期</p>
				{{#layout-push direction="row" split=false classNames='date_choose' }}
                {{#if (bmcom/bm-nil-obj bm_stud_service.stud)}}
                {{else}}
					{{bm-lay-date inputVal=bm_stud_service.stud.dob}}
                {{/if}}
				{{/layout-push}}
			{{/layout-push}}
			{{#layout-push direction="col" split=true classNames='input_area area-margin-bottom' }}
				<p class="edit_title">性别</p>
				<div class="">
					<span class="radio-inline">
						<input type="radio" name="rel" value="fa" checked={{bmeq item.gender 1}}/>
						<label for="male">男</label>
					</span>
					<span class="radio-inline">
						<input type="radio" name="rel" value="ma" checked={{bmeq item.gender 0}}/>
						<label for="female">女</label>
					</span>
				</div>
				{{!-- {{bm-radio title="单选框" checkboxTitle="box-title" checkboxItem=genderCheck}} --}}
			{{/layout-push}}
			{{#layout-push direction="col" split=true classNames='input_area area-margin-bottom' }}
				<p class="edit_title">就读学校<span class="sub_title">(选填)</span></p>
				{{input type="text" class="edit_input kid_school" maxlength='14' value=bm_stud_service.stud.school}}
				{{!-- <span class="edit_hint">{{school_length}}/14</span> --}}
			{{/layout-push}}
		</section>
		{{#each bm_stud_service.stud.Guardians as |item|}}
			<section class="parent_info stu_section">
				{{#layout-push direction="col" split=true classNames='input_area area-margin-bottom' }}
					<p class="edit_title">家长姓名</p>
					{{input type="text" class="edit_input par_name" maxlength='8' value=item.name}}
				{{/layout-push}}

				{{#layout-push direction="col" split=true classNames='input_area area-margin-bottom' }}
					<p class="edit_title">与学员关系</p>
					<div class="">
						<span class="radio-inline">
							<input type="radio" name="rel" value="fa" checked={{bmeq item.gender 1}}/>
							<label for="papa">父亲</label>
						</span>
						<span class="radio-inline">
							<input type="radio" name="rel" value="ma" checked={{bmeq item.gender 0}}/>
							<label for="mom">母亲</label>
						</span>
						<span class="radio-inline">
							<input type="radio" name="rel" value="other"/>
							<label for="other">{{input type="text" class="edit_input kid_rel" value=""}}</label>
						</span>
					</div>
				{{/layout-push}}
				{{#layout-push direction="col" split=true classNames='input_area area-margin-bottom' }}
					<p class="edit_title">联系方式</p>
					{{input type="text" class="edit_input par_contact" value=item.contact}}
				{{/layout-push}}
				{{#layout-push direction="col" split=true classNames='input_area area-margin-bottom' }}
					<p class="edit_title">地址</p>
					{{input type="text" class="edit_input par_address" maxlength="14" value=item.addr}}
				{{/layout-push}}
			</section>
		{{/each}}
	</div>
{{/layout-push}}

{{outlet}}
