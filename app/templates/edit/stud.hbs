{{#bp-layout direction='row' main='between' classNames='edit_nav' }}
	<span classNames='edit_nav_title'>编辑学生信息</span>
	<span>
		{{#bp-button type="subtle"
			onClick=(action 'cancelInputBtnClicked')}}取消{{/bp-button}}
		{{#bp-button type="primary"
	  		onClick=(action 'saveInputBtnClicked')}}提交{{/bp-button}}
	</span>
{{/bp-layout}}
{{#bp-layout direction='row' main='between' classNames='edit_container experience-content' }}
	<ul class="edit_left_nav">
		<li class="left_bar_item">
			<a class="edit_left_menu_stud" href="#kid-info">学生信息</a>
		</li>
		<li class="left_bar_item">
			<a class="edit_left_menu_stud" href='#par-story'>监护人信息</a>
		</li>
		<li class="left_bar_item">
			<a class="edit_left_menu_stud" href="#other-info">更多信息</a>
		</li>
	</ul>
	<div class="input_container">
		<a id="kid-info" class="anchor-point"></a>
		<section class="kids_info stu_section">
			<p class="title-name">孩子信息</p>
			{{#bp-layout direction='row' }}
				{{#bp-layout direction='col' classNames='input_area left-area'}}
					<p class="edit_title">学生头像</p>
					{{bmcom/bm-img-uploader needTag=false canEdit=true img=session.cover classNames='alt-course-edit-tag-img-adjust'}}
				{{/bp-layout}}
				{{#bp-layout direction='col'}}
					{{#bp-layout direction='row'}}
						{{#bp-layout direction="col"  classNames='input_area area-margin-bottom name-area' }}
							{{bmform/bm-edit-line title='真实姓名'  inputVal=model.stud.name classNames='input_area area-margin-bottom'}}
						{{/bp-layout}}
						{{#bp-layout direction="col" classNames='input_area area-margin-bottom' }}
							{{bmform/bm-edit-line title='昵称'  inputVal=model.stud.nickname classNames='input_area area-margin-bottom'}}
						{{/bp-layout}}
					{{/bp-layout}}

					{{#bp-layout direction="col" main='between' classNames='input_area area-margin-bottom' }}
						<p class="edit_title">性别</p>
						{{bmcom/bm-radio-inline cur_idx=sex_idx judge=sex titles=genderCheck}}
					{{/bp-layout}}

					{{#bp-layout direction="col" main='between' classNames='input_area area-margin-bottom' }}
						<p class="edit_title">出生日期</p>
						{{#bp-layout direction="row" split=false classNames='date_choose' }}
							{{#if (bmcom/bm-nil-obj model.stud)}}
							{{else}}
								{{bmform/bm-lay-date inputVal=model.stud.dob}}
							{{/if}}
						{{/bp-layout}}
					{{/bp-layout}}
					{{#bp-layout direction='row'}}
						{{#bp-layout direction="col" main='between' classNames='input_area area-margin-bottom  name-area' }}
							{{bmform/bm-edit-line title='就读学校'  inputVal=model.stud.school classNames='input_area area-margin-bottom'}}
						{{/bp-layout}}
						{{#bp-layout direction="col" classNames='input_area area-margin-bottom' }}
							{{!-- <p class="edit_title">年级</p> --}}
							{{!-- {{bmform/bm-base-select selTitle='年级' selId='sourceWay' selTitle="" options=grade curSelect=model.stud.grade classNames="grade-select"}} --}}
							{{bp-dropdown-simple
								title='年级'
								options=model.stud.grade
								optionKey='name'}}
						{{/bp-layout}}
					{{/bp-layout}}
					{{bmform/bm-detail-address
						provinces=provinces
						citys=citys
						areas=areas
						province=model.stud.province
						city=model.stud.city
						area=model.stud.district
						title='地址'
						detailAddress=model.stud.address
						classNames="area-margin-bottom"}}
				{{/bp-layout}}
				{{/bp-layout}}
		</section>
		<a id="par-story" class="anchor-point"></a>
		{{#each model.stud.guardians as |item|}}
			<section class="parent_info stu_section">
				<p class="title-name">监护人信息</p>
				{{#bp-layout direction="col" main='between' classNames='input_area area-margin-bottom' }}
					{{bmform/bm-edit-line title='姓名'  inputVal=item.name classNames='input_area area-margin-bottom'}}
				{{/bp-layout}}

				{{#bp-layout direction="col" main='between' classNames='input_area area-margin-bottom' }}
					<p class="edit_title">与孩子关系</p>
						{{bmcom/bm-radio-inline cur_idx=rela_idx titles=relaChecked judge=rela}}
				{{/bp-layout}}
				{{#bp-layout direction="col" main='between' classNames='input_area area-margin-bottom' }}
					{{bmform/bm-edit-line numberInput=true title='手机号' maxlength="11" inputVal=item.contact classNames='input_area area-margin-bottom'}}
					{{!-- {{bmform/bm-edit-line title='微信'  inputVal=item.wechat classNames='input_area area-margin-bottom'}} --}}
				{{/bp-layout}}
			</section>
		{{/each}}
		<a id="other-info" class="anchor-point"></a>
		<section class="kids_info stu_section">
			<p class="title-name">更多信息</p>
			{{!-- {{bmform/bm-base-select type="id" idType=true selId='teacherName' selTitle="课程顾问" options=model.techs curSelect=cur_tech_id classNames="input_area area-margin-bottom"}} --}}
			{{bmform/bm-base-select selId='sourceWay' selTitle="渠道来源" options=origin curSelect=model.stud.sourceWay classNames="input_area"}}
		</section>
	</div>
{{/bp-layout}}
{{outlet}}
