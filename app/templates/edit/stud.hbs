
{{#layout-push direction='row' split=true classNames='edit_nav' }}
	<span classNames='edit_nav_title'>编辑学生信息</span>
	<span>
		{{#if isPushing}}
			{{#link-to 'stud' class="edit_nav_btn btn_cacel"}}
				取消
			{{/link-to}}
		{{else}}
			{{#link-to 'detail.stud' bm_stud_service.stud.id class="edit_nav_btn btn_cacel"}}
				取消
			{{/link-to}}
		{{/if}}
		<button class="edit_nav_btn btn_save" {{action 'saveInputBtnClicked'}}>提交</button>
	</span>
{{/layout-push}}

{{#layout-push direction='row' split=true classNames='edit_container experience-content' }}
	<ul class="edit_left_nav">
		<li class="left_bar_item">
			<a class="edit_left_menu_stud">孩子信息</a>
		</li>
		<li class="left_bar_item">
			<a class="edit_left_menu_stud">监护人信息</a>
		</li>
		<li class="left_bar_item">
			<a class="edit_left_menu_stud">更多信息</a>
		</li>
	</ul>
	<div class="input_container">
		<section id="kid-info" class="kids_info stu_section">
			<p class="title-name">孩子信息</p>
			{{#layout-push direction='row'}}
				{{#layout-push direction="col"  classNames='input_area area-margin-bottom name-area' }}
					{{bmform/bm-edit-line title='真实姓名'  inputVal=bm_stud_service.stud.name classNames='input_area area-margin-bottom'}}
				{{/layout-push}}
				{{#layout-push direction="col" classNames='input_area area-margin-bottom' }}
					{{bmform/bm-edit-line title='昵称'  inputVal=bm_stud_service.stud.nickname classNames='input_area area-margin-bottom'}}
				{{/layout-push}}
			{{/layout-push}}

			{{#layout-push direction="col" split=true classNames='input_area area-margin-bottom' }}
				<p class="edit_title">性别</p>
				{{#layout-push direction='row'}}
					<span class="radio-inline">
						<input type="radio" name="studSex" value="male" checked={{bmeq item.gender 1}}/>
						<label for="male">男</label>
					</span>
					<span class="radio-inline">
						<input type="radio" name="studSex" value="female" checked={{bmeq item.gender 0}}/>
						<label for="female">女</label>
					</span>
					<span class="radio-inline">
						<input type="radio" name="studSex" value="other" checked={{bmeq item.gender 0}}/>
						<label for="female">未知</label>
					</span>
				{{/layout-push}}
			{{/layout-push}}

			{{#layout-push direction="col" split=true classNames='input_area area-margin-bottom' }}
				<p class="edit_title">出生日期</p>
				{{#layout-push direction="row" split=false classNames='date_choose' }}
	                {{#if (bmcom/bm-nil-obj bm_stud_service.stud)}}
	                {{else}}
						{{bmform/bm-lay-date inputVal=bm_stud_service.stud.dob}}
	                {{/if}}
				{{/layout-push}}
			{{/layout-push}}

			{{#layout-push direction="col" split=true classNames='input_area area-margin-bottom' }}
				{{bmform/bm-edit-line title='就读学校' largeInput=true  inputVal=bm_stud_service.stud.school classNames='input_area area-margin-bottom'}}
			{{/layout-push}}

			{{#layout-push direction="col" split=true classNames='input_area area-margin-bottom' }}
				{{bmform/bm-edit-line title='地址' largeInput=true  inputVal=bm_stud_service.stud.address classNames='input_area area-margin-bottom'}}
			{{/layout-push}}
		</section>
		{{#each bm_stud_service.stud.Guardians as |item|}}
			<section class="parent_info stu_section" id="par-story">
				<p class="title-name">监护人信息</p>
				{{#layout-push direction="col" split=true classNames='input_area area-margin-bottom' }}
					{{bmform/bm-edit-line title='姓名'  inputVal=item.name classNames='input_area area-margin-bottom'}}
				{{/layout-push}}

				{{#layout-push direction="col" split=true classNames='input_area area-margin-bottom' }}
					<p class="edit_title">与孩子关系</p>
					{{#layout-push direction='row'}}
						<span class="radio-inline">
							<input type="radio" name="studRela" value="dad"/>
							<label for="papa">父亲</label>
						</span>
						<span class="radio-inline">
							<input type="radio" name="studRela" value="mom"/>
							<label for="mom">母亲</label>
						</span>
						<span class="radio-inline">
							<input type="radio" name="studRela" value="other"/>
							<label for="mom">其他</label>
							{{!-- <label for="other">{{input type="text" class="edit_input kid_rel" value=""}}</label> --}}
						</span>
					{{/layout-push}}
				{{/layout-push}}
				{{#layout-push direction="col" split=true classNames='input_area area-margin-bottom' }}
					{{bmform/bm-edit-line title='联系方式'  inputVal=item.contact classNames='input_area area-margin-bottom'}}
				{{/layout-push}}
				{{!-- {{#layout-push direction="col" split=true classNames='input_area area-margin-bottom' }}
					{{bmform/bm-edit-line title='身份证号'  notNeeded=true inputVal=item.addr classNames='input_area area-margin-bottom'}}
				{{/layout-push}} --}}
			</section>
		{{/each}}

		<section class="kids_info stu_section" id="other-info">
			<p class="title-name">更多信息</p>
			{{#layout-push direction="col" split=true classNames='input_area area-margin-bottom' }}
				<p class="edit_title">课程顾问</p>
				{{#layout-push direction="row" classNames="area-margin-bottom"}}
					{{#bm-select/bm-select-box classNames='course-reserve-modal-select'}}
						<option value="">请选择</option>
						{{#each studOther as |item|}}
							<option value={{item.id}}>{{item.title}}</option>
						{{/each}}
					{{/bm-select/bm-select-box}}
				{{/layout-push}}
			{{/layout-push}}

			{{#layout-push direction="col" split=true classNames='input_area area-margin-bottom' }}
				<p class="edit_title">渠道来源</p>
				{{#layout-push direction="row" classNames="area-margin-bottom"}}
					{{#bm-select/bm-select-box classNames='course-reserve-modal-select'}}
						<option value="">请选择</option>
						{{#each studOther as |item|}}
							<option value={{item.id}}>{{item.title}}</option>
						{{/each}}
					{{/bm-select/bm-select-box}}
				{{/layout-push}}
			{{/layout-push}}
		</section>
	</div>
{{/layout-push}}

{{outlet}}
