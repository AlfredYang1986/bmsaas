            </div>
        {{/layout-push}}

        {{#layout-push direction='row' split=true}}
            {{bm-edit-line title="姓名" isNeeded=true maxCount=8 inputVal=brand_name classNames='line_half' }}
            {{bm-edit-line title="昵称" isNeeded=true maxCount=8 classNames='line_half' }}
        {{/layout-push}}

        {{#layout-push direction='row' split=true}}
