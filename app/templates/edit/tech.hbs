            {{/layout-push}}

            {{bm-edit-line title="性别" isNeeded=true maxCount=1 classNames='line_half'}}
        {{/layout-push}}

        {{#layout-push direction='row' split=true}}
            {{bm-edit-line title="来自(城市)" inputVal=brand_name classNames='line_half' }}
        {{/layout-push}}

