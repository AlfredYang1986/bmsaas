<section id="tech-info" class="line_container_mid edit_page_top_margin">
    <div class="edit_panel v_push edit_first_panel">
        {{#layout-push direction="row"}}
            <span class="edit_title">基础信息</span>
        {{/layout-push}}

        {{#layout-push direction="row"}}
            <div class="edit_logo_container">
                <div class="v_mid">
                    <span class="edit_logo_des">点击上传</span>
                </div>
                <img class="edit_logo_img" src="" />
            </div>
            <div class="v_end edit_logo_right" >
                <span>144px*144px</span>
                <span>支持jpg、jpeg、png，小于100 KB</span>
            </div>
        {{/layout-push}}

        {{#layout-push direction='row' split=true}}
            {{bm-edit-line title="姓名" isNeeded=true maxCount=8 inputVal=tech_name classNames='line_half' }}
            {{bm-edit-line title="昵称" isNeeded=true maxCount=8 inputVal=tech_nickname classNames='line_half' }}
        {{/layout-push}}

        {{#layout-push direction='row' split=true}}
            {{#layout-push direction='col' classNames='line_half'}}
                <div class="line_container_split" >
                    <div class="line_container" >
                        <span class="edit_subtitle" >出生日期</span>
                        <div class="v_end">
                            <span class="edit_required" >* 必填</span>
                        </div>
                    </div>
                </div>
                <div class="line_container" >
                    {{!-- <select class="start-time" name="">
                        <option value="">年</option>
                        <option value="">2018</option>
                    </select>
                    <select class="start-time" name="">
                        <option value="">月</option>
                        <option value="">01</option>
                    </select>
                    <select class="start-time" name="">
                        <option value="">日</option>
                        <option value="">01</option>
                    </select> --}}
                    {{date-choose data=tech_date}}
                </div>
            {{/layout-push}}

            {{bm-edit-line title="性别" isNeeded=true maxCount=1 inputVal=tech_gender_str classNames='line_half'}}
        {{/layout-push}}

        {{#layout-push direction='row' split=true}}
            {{bm-edit-line title="来自(城市)" inputVal=tech_homeland classNames='line_half' }}
        {{/layout-push}}

        {{#layout-push direction='row' split=true}}
            {{bm-edit-line title="联系方式" isNeeded=true inputVal=tech_contact classNames='line_half'}}
            {{bm-edit-line title="微信 Wechat" inputVal=tech_wechat classNames='line_half'}}
        {{/layout-push}}
        {{bm-edit-line title="地址" maxCount=30 inputVal=tech_address}}
    </div>
</section>

<section id="tech-info" class="line_container_mid">
    <div class="edit_panel v_push edit_first_panel">
        {{#layout-push direction="row"}}
            <span class="edit_title">教育经历</span>
        {{/layout-push}}

        {{bm-edit-line title="学校名称" inputVal=edu_name}}

        {{#layout-push direction='col' classNames='line_half select-school'}}
            <div class="line_container_split" >
                <div class="line_container" >
                    <span class="edit_subtitle">学校</span>
                </div>
            </div>
            <div class="line_container" >
                <select class="start-time" name="">
                    <option value="">年</option>
                    <option value="">2018</option>
                </select>
            </div>
        {{/layout-push}}


        {{bm-edit-line title="所学专业" inputVal=edu_category}}

        {{#layout-push direction='row' split=true}}
            {{#layout-push direction='row' classNames='line_half'}}
                <div class="time-cycle">
                    <div class="line_container_split" >
                        <div class="line_container" >
                            <span class="edit_subtitle" >开始时间</span>
                        </div>
                    </div>
                    <div class="line_container" >
                        <select class="start-time" name="">
                            <option value="">年</option>
                            <option value="">2018</option>
                        </select>
                        <select class="start-time" name="">
                            <option value="">月</option>
                            <option value="">01</option>
                        </select>
                        {{!-- {{date-choose data=model.tech.edu.start}} --}}
                    </div>
                </div>
            {{/layout-push}}
            {{#layout-push direction='row' classNames='line_half'}}
                <div class="">
                    <div class="line_container_split">
                        <div class="line_container">
                            <span class="edit_subtitle">结束时间</span>
                        </div>
                    </div>
                    <div class="line_container" >
                        <select class="start-time" name="">
                            <option value="">年</option>
                            <option value="">2018</option>
                        </select>
                        <select class="start-time" name="">
                            <option value="">月</option>
                            <option value="">01</option>
                        </select>
                        {{!-- {{date-choose data=model.tech.edu.end}} --}}
                    </div>
                </div>
            {{/layout-push}}
        {{/layout-push}}

        {{#layout-push direction='row'}}
            <div class="add-decide-btn">
                <button type="button" class="btn">确定</button>
                <button type="button" class="btn">取消</button>
            </div>
        {{/layout-push}}

        {{#layout-push direction='col' classNames='edit_inner_panel'}}
            {{#layout-push direction='row' split=true classNames='edit_inner_content_line'}}
                {{#layout-push direction="col" mid=true}}
                    <p>学校名称</p>
                    <p>学业.所学专业</p>
                {{/layout-push}}
                {{#layout-push direction="col" mid=true}}
                    <a>修改</a>
                    <p>2017.4 -2018.4 </p>
                {{/layout-push}}
            {{/layout-push}}
        {{/layout-push}}
    </div>
</section>

