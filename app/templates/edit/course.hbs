<ul class="nav">
    <li class="nav-item">
        <a class="nav-link active brand_name" href="#">新建-课程信息</a>
    </li>
    <li class="nav-item menu_mid">
        <div class="menu_container">
            {{#if isPushing}}
                {{#link-to 'course' class="nav_cancel_btn menu_button_between"}}
                    取消
                {{/link-to}}
            {{else}}
                {{#link-to 'detail.course' model.course.id class="nav_cancel_btn menu_button_between"}}
                    取消
                {{/link-to}}
            {{/if}}
            {{#bs-button classNames="nav_save_btn menu_button_between" onClick=(action (mut modal3) true)}}保存{{/bs-button}}
            {{#bs-modal open=modal3 onHidden=(action (mut modal3) false) as |modal|}}
                <div class="course-reserve-pop-ups">
                    {{#modal.body classNames="course-reserve-success"}}
                        {{#layout-push direction=row classNames="success-info"}}
                            <img src="../images/success.png" alt="">
                            {{#layout-push direction=col}}
                                <p>成功创建课程： 课程名称 </p>
                                <p>您可以将该课程放入课程预约中！</p>
                            {{/layout-push}}
                        {{/layout-push}}
                    {{/modal.body}}
                    {{#modal.footer}}
                     {{#bs-button type="success" classNames="nav_cancel_btn menu_button_between" onClick=(action 'saveCourseBtnClicked') }}暂不开放{{/bs-button}}
                      {{#bs-button type="success" classNames="nav_save_btn menu_button_between"  onClick=(action 'reserveCourse')}}前往开放预约体验{{/bs-button}}
                    {{/modal.footer}}
                </div>
            {{/bs-modal}}
        </div>
    </li>
</ul>

