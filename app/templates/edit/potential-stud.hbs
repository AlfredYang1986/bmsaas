{{#layout-push direction='row' split=true classNames='edit_nav' }}
	<span classNames='edit_nav_title'>添加潜在学员</span>
	<span>
		<button class="edit_nav_btn btn_cacel" {{action 'closeProcess'}}>关闭流程</button>
	</span>
{{/layout-push}}

{{#layout-push direction='row' split=true classNames='edit_container experience-content' }}
	<div class="edit_area">
		{{#layout-push direction='col' split=true classNames='add-pt-stud'}}
			{{#layout-push direction='col' mid=true classNames='search-area'}}
				<div class="search">
					<input type="text" name="" value="" class="search-input" placeholder="手机号">
					<i class="icon-search" {{action 'searchStud' argument}}></i>
					{{#if studList}}
						{{#layout-push direction="row" classNames="stud-list-area" }}
							<table class='ib_table_head_pt stud_list_table'>
								{{bmtable/bm-table-inner type="srarchptStuds" listData=studs }}
							</table>
						{{/layout-push}}
					{{else}}
						{{#layout-push direction='row'}}
							<p class="note">若尚未在小程序进行注册者，请先帮助注册</p>
							<img src="" alt="" class="code-img">
						{{/layout-push}}
					{{/if}}
				</div>
			{{/layout-push}}
			{{#layout-push direction='row' classNames='btn-area'}}
				{{#if inputVal}}
					{{#layout-push direction='row' classNames='add-stud'}}
						<p>没有要添加的学员？</p>
						<p class="link">添加学生</p>
						<button type="button" name="button" class="btn_save" {{action 'addPtStud'}}>添加</button>
					{{/layout-push}}
				{{else}}
					<button type="button" name="button" class="edit_between_btn">下一步</button>
				{{/if}}
			{{/layout-push}}
		{{/layout-push}}
	</div>
