                {{bmform/checkbox-label limit=10
                        candidate=surroundings
                        titlecss='edit_sub_title'
                        btncss='form-check-label'
                    }}
            {{/layout-push}}
            {{#layout-push direction="row"}}
                <span class="alt-edit-title alt-edit-title-loc">小区/校区/商圈 名称</span>
            {{/layout-push}}
            <span class='alt-edit-up-hit'>示例：天通苑、三里屯、央美附小</span>
            {{input value=bm_yard_service.yard.scenario classNames='alt-edit-line alt-edit-line-area'}}

            {{#layout-push direction="row"}}
                <span class="alt-edit-title">周边交通路线信息</span>
            {{/layout-push}}
            {{input value=bm_yard_service.yard.traffic_info classNames='alt-edit-line alt-edit-line-traf'}}

            {{#layout-push classNames='r_end' direction='row'}}
