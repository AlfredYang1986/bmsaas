<ul class="edit_left_bar">
    <li class="left_bar_item" >
        <div class="edit_left_menu_mid menu_margin_right">
            <a class="edit_left_menu_text" href="#yard-loc">场地地址</a>
        </div>
    </li>
    <li class="left_bar_item" >
        <div class="edit_left_menu_mid menu_margin_right">
            <a class="edit_left_menu_text" href="#yard-info">场地名称</a>
        </div>
    </li>
    <li class="left_bar_item" >
        <div class="edit_left_menu_mid menu_margin_right">
            <a class="edit_left_menu_text" href="#yard-evn">场地环境</a>
        </div>
    </li>
    <li class="left_bar_item" >
        <div class="edit_left_menu_mid menu_margin_right">
            <a class="edit_left_menu_text" href="#yard-faclity">设施</a>
        </div>
    </li>
    <li class="left_bar_item" >
        <div class="edit_left_menu_mid menu_margin_right">
            <a class="edit_left_menu_text" href="#yard-cert">资质与认证</a>
        </div>
    </li>
</ul>

<section id="yard-loc" class="line_container_mid edit_page_top_margin">
    <div class="edit_panel v_push edit_first_panel">
        {{#layout-push direction="row"}}
            <span class="edit_title">场地地址</span>
        {{/layout-push}}
        {{#layout-push direction='row' split=true}}
            {{#layout-push direction='col' classNames='line_half'}}
                <div class="line_container_split" >
                    <div class="line_container" >
                        <span class="edit_subtitle" >场地地址</span>
                        <div class="v_end">
                            <span class="edit_required" >* 必填</span>
                        </div>
                    </div>
                </div>
                <div class="line_container" >
                    {{region-choose
                        provinces=yard_provinces
                        citys=yard_citys
                        governmentAreas=yard_government_areas
                        model=model.yard
                        changeProvinces=(action 'changeProvinces')
                        changeCitys=(action 'changeCitys')
                        changeGovernmentAreas=(action 'changeGovernmentAreas')}}
                </div>
            {{/layout-push}}
        {{/layout-push}}
        {{bm-edit-line pholder="例如：街道门牌号、小区楼号、楼层号" classNames="detail-address" inputVal=yard_detail_address}}
    </div>
</section>

<section id="yard-info" class="line_container_mid">
    <div class="edit_panel v_push ">
        {{#layout-push direction="row"}}
            <span class="edit_title">场地描述</span>
        {{/layout-push}}

        {{bm-edit-line title="场地名称" isNeeded=true maxCount=20 pholder="如：东外五十六号创业园" inputVal=yard_title}}
        {{bm-edit-line title="场地描述" maxCount=400 pholder="您的场地都有哪些类型的空间呢，简单的描述您场地下拥有的空间上数量和功能，能让家长更加了解您的规模和环境，让家长放心。同时贴心的服务也能为您的品牌加分喔！" inputVal=yard_des}}
    </div>

</section>

<section id="yard-evn" class="line_container_mid ">
