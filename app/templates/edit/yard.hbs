        {{bm-edit-line title="周边交通路线信息" maxCount=100 pholder="例如：天通苑" inputVal=yard_around}}
    </div>
</section>

<section class="line_container_mid " >
    {{#layout-push direction='col' classNames='edit_panel edit_reward_panel'}}
        {{#layout-push direction='row' }}
            <span class="edit_title">资质认证</span>
        {{/layout-push }}
        {{#layout-push direction='row' classNames='edit_title_des_between'}}
            <div class="edit_des">
                <br>
                <span>每张图片小于100 KB</span>
            </div>
        {{/layout-push }}

        <div class="line_container_warp">
            <div class="edit_logo_container">
                {{#layout-push direction='col' mid=true}}
                    <span class="edit_logo_des">点击上传</span>
                {{/layout-push }}
            </div>
        </div>
        {{!-- 新增认证Cards --}}
        {{editor-certification-cards data=yard_awards}}

    {{/layout-push }}
</section>

<section id="yard-faclity" class="line_container_mid " >
    {{#layout-push direction='col' classNames='edit_panel '}}
        {{#layout-push direction='row' }}
            <span class="edit_title">设施</span>
        {{/layout-push }}

        {{#layout-push direction='row' split=true}}
            {{bm-edit-line title="停车场" isNeeded=true maxCount=1 classNames='line_half' inputVal=yard_parking}}
            {{bm-edit-line title="急救包" isNeeded=true maxCount=1 classNames='line_half' inputVal=yard_embag}}
        {{/layout-push}}
    {{/layout-push }}
</section>

