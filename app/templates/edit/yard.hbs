    {{#if (bmeq current_idx 4)}}
    <section class="yard-infos yard_section" >
        {{#layout-push direction='col' classNames='edit_panel edit_reward_panel edit_fifth_panel'}}
            {{#layout-push direction="row"}}
                <span class="alt-edit-title">场地图片</span>
            {{/layout-push}}
            <span class='alt-edit-up-hit'>每张图片小于100KB</span>
            {{#layout-push direction='row' mid=true}}
                <div class='line_conatainer_warp'>
                    {{#each bm_yard_service.yard.Tagimgs as |item|}}
                        {{bmcom/bm-img-uploader needTag=true canEdit=true img=item.img tag=item.tag classNames='alt-yard-edit-tag-img-adjust'}}
                    {{/each}}
                </div>
            {{/layout-push}}
            {{#layout-push classNames='r_end' direction='row'}}
                <button class='alt-edit-step-btn' {{action 'saveYardBtnClicked'}}>完成</button>
            {{/layout-push}}
        {{/layout-push }}
    </section>
    {{/if}}
