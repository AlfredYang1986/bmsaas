                <span class="edit_title">设施</span>
            {{/layout-push }}

            {{#layout-push direction='row' split=true}}
                {{bmform/bm-edit-line title="停车场" isNeeded=true maxCount=1 classNames='line_half' inputVal=yard_parking}}
