<div >
    {{nav-top}}
    {{left-menu}}
</div>
<div class="detail_content_top">
    <div class="detail_page">
        {{#link-to 'experienceOpen' class="detail_href_ref"}}体验开放{{/link-to}}
        {{#link-to 'detail.experience' class="detail_href_ref"}}>场次安排 {{/link-to}}
        <div class='detail_panel' >
            {{#layout-push direction='row' split=true}}
                {{#layout-push direction='col' mid=true }}
                    {{#layout-push direction='col'}}
                        <span class="detail_panel_role_name">乐高机器人设计搭建课</span>
                        {{#layout-push direction='row'}}
                            <span class="course_detail_panel_role_des">运动</span>
                            <span class="course_detail_panel_role_des">跆拳道</span>
                        {{/layout-push}}
                        <span class="course_detail_panel_role_des">两个场次报名开放中</span>
                    {{/layout-push}}
                {{/layout-push}}
                {{#layout-push direction="row"}}
                    <button type="button" name="button" class="btn delete-course-btn">删除</button>
                    {{#bs-button class="stud_qrcod_btn" onClick=(action (mut courseCode) true) classNames="course-code-btn"}}生成课程二维码{{/bs-button}}
                    {{#bs-button class="stud_qrcod_btn" onClick=(action 'addSession') classNames="add-experience"}}添加场次{{/bs-button}}
                    <div local-class="modal-dialog">
                        {{#bs-modal open=courseCode onHidden=(action (mut courseCode) false) as |modal|}}
                            <div class="stud-modal">
                                {{#modal.body classNames="stud-modal-body"}}
                                  <img src="" local-class="code-img" alt="">
                                  <p local-class="title">课程预约详情</p>
                                {{/modal.body}}
                                {{#modal.footer classNames="stud-modal-footer"}}
                                  {{#bs-button onClick=(action modal.close)}}取消{{/bs-button}}
                                  {{#bs-button type="success" onClick=(action modal.submit)}}保存图片{{/bs-button}}
                                {{/modal.footer}}
                            </div>
                        {{/bs-modal}}
                    </div>
                {{/layout-push}}
            {{/layout-push}}
        </div>
        {{#if sessionArrange}}
            <div class="detail_panel detail_panel_col_between" >
                {{#layout-push direction='row'}}
                        <div class="time-select today">
                            <p class="active" {{action 'sessionArrange'}}>场次安排</p>
                        </div>
                        <div class="time-select today">
                            <p class="" {{action 'activityDetail'}}>体验详情</p>
                        </div>
                {{/layout-push}}
            </div>
            <div class="detail_page table-header">
                {{#layout-push direction='col'}}
                    {{#layout-push direction='row' split=true}}
                        {{#each model as |item|}}
                            <span>{{item.title}}</span>
                        {{/each}}
                    {{/layout-push}}
                {{/layout-push}}
            </div>
            <div class="inbox-table">
                <div class="detail_page table-body">
                        {{#layout-push direction='col'}}
                            {{#layout-push direction='row' split=true  onClick=(action 'viewExperDetail')}}
                                <span class="email-status" {{action 'viewExperDetail'}}>01</span>
                                <span class="">08/03（周五）10:30</span>
                                <span class="">北京朝阳区东外56号文创产业园111座</span>
                                <span class="">20/100</span>
                                <span class="apply-status-open">开放</span>
                                {{#layout-push direction='row'}}
                                    {{#bs-button classNames="email-option" onClick=(action (mut modal3) true)}}<span>停止报名</span>{{/bs-button}}
                                    {{#bs-button classNames="email-option" onClick=(action (mut modal3) true)}}<span>更多</span>{{/bs-button}}
                                {{/layout-push}}
                            {{/layout-push}}
                        {{/layout-push}}
                </div>
                <div class="detail_page table-body">
                        {{#layout-push direction='col'}}
                            {{#layout-push direction='row' split=true}}
                                <span class="email-status">02</span>
                                <span class="">08/03（周五）10:30</span>
                                <span class="">北京朝阳区东外56号文创产业园111座</span>
                                <span class="">20/100</span>
                                <span class="apply-status-close">关闭</span>
                                {{#layout-push direction='row'}}
                                    {{#bs-button classNames="email-option" onClick=(action (mut modal3) true)}}<span>停止报名</span>{{/bs-button}}
                                    {{#bs-button classNames="email-option" onClick=(action (mut modal3) true)}}<span>更多</span>{{/bs-button}}
                                {{/layout-push}}
                            {{/layout-push}}
                        {{/layout-push}}
                </div>
            </div>
        {{/if}}

        {{#if activityDetail}}
            <div class="detail_panel detail_panel_col_between" >
                {{#layout-push direction='row'}}
                        <div class="time-select today">
                            <p class="" {{action 'sessionArrange'}}>场次安排</p>
                        </div>
                        <div class="time-select today">
                            <p class="active" {{action 'activityDetail'}}>体验详情</p>
                        </div>
                {{/layout-push}}
            </div>
            <div class="detail_panel detail_panel_col_between">
                <div class="course-info">
                    {{#layout-push direction='row'  split=true classNames="line_conatainer_split"}}
                        {{#layout-push direction="row"}}
                            <p>主题</p>
                            <p>乐高机器人设计搭建课</p>
                        {{/layout-push}}
                        <a class="course-info-change-btn">编辑</a>
                    {{/layout-push}}
                    {{#layout-push direction='row'}}
                        <p>分类</p>
                        <p>体验课</p>
                    {{/layout-push}}
                    {{#layout-push direction='row'}}
                        <p>适应年龄</p>
                        <p>6~12</p>
                    {{/layout-push}}
                    {{#layout-push direction='row'}}
                        <p>体验时长</p>
                        <p>240 min</p>
                    {{/layout-push}}
                    
                    {{#layout-push direction='col' classNames='detail_panel_des_container detail_panel_des_container_between'}}
                        <span class='detail_panel_title'>课程目标</span>
                    {{/layout-push}}
                    {{#layout-push direction='col' classNames='detail_inner_panel'}}
                        {{#layout-push direction='col' classNames='detail_inner_content_line'}}
                            <span class='detail_inner_left'>
                                {{model.course.target}}
                            </span>
                        {{/layout-push}}
                    {{/layout-push}}

                    {{#layout-push direction='col' classNames='detail_panel_des_container detail_panel_des_container_between'}}
                        <span class='detail_panel_title'>课程计划</span>
                    {{/layout-push}}
                    {{#layout-push direction='col' classNames='detail_inner_panel'}}
                        {{#layout-push direction='col' classNames='detail_inner_content_line'}}
                            <span class='detail_inner_list'>
                                {{model.course.planning}}
                            </span>
                        {{/layout-push}}
                    {{/layout-push}}


                    {{#layout-push direction='col' classNames='detail_panel_des_container detail_panel_des_container_between'}}
                        <span class='detail_panel_title'>课程内容</span>
                    {{/layout-push}}
                    {{#layout-push direction='col' classNames='detail_inner_panel'}}
                        {{#layout-push direction='col' classNames='detail_inner_content_line'}}
                            <span class='detail_inner_content'>
                                {{model.course.content}}
                            </span>
                        {{/layout-push}}
                    {{/layout-push}}

                    {{#layout-push direction='col' classNames='detail_panel_des_container detail_panel_des_container_between'}}
                        <span class='detail_panel_title'>课程图片</span>
                    {{/layout-push}}
                    <div class="line_conatainer_warp detail_card_container" >
                        {{#each model.course.imgs as |item|}}
                            {{detail-card card=item}}
                        {{/each}}
                    </div>
                </div>

            </div>
        {{/if}}
    </div>
</div>
{{outlet}}
