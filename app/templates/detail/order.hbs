{{#bp-layout direction='col' classNames='order_content_top'}}
    {{#bp-layout direction='col' classNames='order-page-container order-detail-page'}}
        {{#bmcom/bm-breadcrumb urls=urls as |url|}}
            {{#if (not-eq url.id "")}}
                {{#link-to url.link url.id class="reserve_detail_href_ref"}}{{url.pageName}}{{/link-to}}
            {{else}}
                {{#link-to url.link class="reserve_detail_href_ref"}}{{url.pageName}}{{/link-to}}
            {{/if}}
        {{/bmcom/bm-breadcrumb}}
        {{#bp-page-header as |ph|}}
            {{#ph.body as |body|}}
                {{#body.left as |left|}}
                    {{#left.item}}
                        订单号 {{model.trans.orderId}}
                    {{/left.item}}
                {{/body.left}}
            {{/ph.body}}
            {{#ph.footer as |footer|}}
                {{#footer.left as |left|}}
                    {{#left.item}}
                        下单时间 {{bmdob/bmdobformat model.trans.createTime}}
                    {{/left.item}}
                    {{#left.item}}
                        订单渠道 {{model.trans.orderWay}}
                    {{/left.item}}
                {{/footer.left}}
            {{/ph.footer}}
        {{/bp-page-header}}

        {{#bp-layout direction='row' classNames='person-detail'}}
            {{#bp-layout direction='col' classNames='applicant-detail'}}
                {{#bp-layout direction='row' classNames='order-detail-title'}}
                    <p class="detail-title">购买人</p>
                {{/bp-layout}}
                {{bmdetail/stud-basis-info label="姓名" content=model.trans.applicant.name}}
                {{bmdetail/stud-basis-info label="微信昵称" content=model.trans.applicant.nickname}}
                {{bmdetail/stud-basis-info label="手机号" content=model.trans.applicant.wechatBindPhone}}
            {{/bp-layout}}
            {{#bp-layout direction='col' classNames='stud-detail'}}
                {{#bp-layout direction='row' classNames='order-detail-title'}}
                    <p class="detail-title">绑定学员</p>
                {{/bp-layout}}
                <p class="detail-content">未绑定开卡学员</p>
                {{!-- {{bmdetail/stud-basis-info label="学生姓名" content=model.trans}}
                {{bmdetail/stud-basis-info label="手机号" content=model.trans}} --}}
            {{/bp-layout}}
        {{/bp-layout}}

        {{#bp-layout direction='col' classNames='cost-detail detail-container'}}
            {{#bp-layout direction='row' classNames='order-detail-title'}}
                <p class="detail-title">消费明细</p>
            {{/bp-layout}}
            {{#bp-layout direction='row' classNames='cost-table-container'}}
                {{bmtable/bm-table-order-detail title=attTitle atts=model.trans.attachables}}
            {{/bp-layout}}
            {{#bp-layout direction='col' classNames='cost-detail-footer'}}
                {{#bp-layout direction='row' main="between" classNames='cost-detail-footer-top'}}
                    <p class="footer-title">优惠方案</p>
                    <p class="footer-content"><span class="discount-icon">减</span>手动输入折扣</p>
                    <p class="footer-discount-money">-￥{{bm-order-total-discount model.trans.attachables}}</p>
                {{/bp-layout}}
                {{#bp-layout direction='row' main="end" classNames='cost-detail-footer-bottom'}}
                    {{#bp-layout direction='col' cross="start" classNames='cost-detail-footer-bottom-inner'}}
                        {{#bp-layout direction='row' classNames='cost-detail-footer-bottom-first'}}
                            <p>应收金额</p>
                            <p>￥{{model.trans.moneyReceivable}}</p>
                        {{/bp-layout}}
                        {{#bp-layout direction='row' cross="center" classNames='cost-detail-footer-bottom-second'}}
                            <p>实收金额</p>
                            <p>￥{{model.trans.moneyReceived}}</p>
                        {{/bp-layout}}
                    {{/bp-layout}}
                {{/bp-layout}}
            {{/bp-layout}}

        {{/bp-layout}}
        {{#bp-layout direction='col' classNames='payment-detail detail-container'}}
            {{#bp-layout direction='row' classNames='order-detail-title'}}
                <p class="detail-title">支付信息</p>
            {{/bp-layout}}
            {{bmdetail/stud-basis-info label="支付方式" content=model.trans.payment}}
            {{bmdetail/stud-basis-info label="支付时间" content=(bmdob/bmdobformat model.trans.orderTime)}}
        {{/bp-layout}}
        {{#bp-layout direction='col' classNames='handle-detail detail-container'}}
            {{#bp-layout direction='row' classNames='order-detail-title'}}
                <p class="detail-title">经办信息</p>
            {{/bp-layout}}
            {{bmdetail/stud-basis-info label="课程顾问" content=model.trans.teacher.name}}
            {{bmdetail/stud-basis-info label="经办人" content=model.trans.operator}}
        {{/bp-layout}}

    {{/bp-layout}}
{{/bp-layout}}
{{outlet}}