<div class="detail_content_top">
	<div class="detail_page">
		<p class="detail_stud_nav">
			{{#link-to 'stud' class="detail_href_ref" }}
				返回
			{{/link-to}}
			{{!-- <span>学生详情</span> --}}
		</p>
		{{#layout-push direction='row' split=true class="detail_title" }}
			<span class="title_text">学员详情</span>
			{{#link-to 'edit.stud' bm_stud_update_service.stud.id classNames='detail_panel_edit_btn' }}
				编辑
			{{/link-to}}
		{{/layout-push}}
		{{#layout-push direction='row' split=true classNames='stud_detail' }}
			<div class="basis_margin">
				{{#layout-push direction='col' mid=true classNames='stud_detail_basis' }}
					<p class="basis_name">{{bm_stud_update_service.stud.name}}</p>
					{{#layout-push direction='row' mid=true}}
						<span class="basis_sex_age">
							{{#if (bmeq bm_stud_update_service.stud.gender 0)}}
								女 ♀
							{{else}}
								男 ♂
							{{/if}}
							{{bmdob/bmdob2age bm_stud_update_service.stud.dob}}岁
						</span>
					{{/layout-push}}
					{{#layout-push direction='row' mid=true classNames='basis_dob' }}
						<span>出生日期  {{bmdob/bmdobformat bm_stud_update_service.stud.dob}}</span>
					{{/layout-push}}
				{{/layout-push }}
			</div>
			{{#layout-push direction='col' mid=true classNames='stud_detail_other' }}
				<div class="other_self">
					{{#layout-push direction='row' mid=false classNames='self_container' }}
						<span>昵称</span><span>{{bm_stud_update_service.stud.nickname}}</span>
					{{/layout-push}}
					{{#layout-push direction='row' mid=false classNames='self_container' }}
						<span>绑定手机号</span><span>{{bm_stud_update_service.stud.contact}}</span>
					{{/layout-push}}
					{{#layout-push direction='row' mid=false classNames='self_container' }}
						<span>就读学校</span><span>{{bm_stud_update_service.stud.school}}</span>
					{{/layout-push}}
					{{#layout-push direction='row' mid=false classNames='self_container' }}
						<span>注册时间</span><span>{{bmdob/bmdobformat bm_stud_update_service.stud.reg_date}}</span>
					{{/layout-push}}
					<div class="line"></div>
					<p class="parent_info">家长信息</p>
					{{#layout-push direction='row' mid=false classNames='self_container' }}
						<span>家长姓名</span><span>{{bm_stud_update_service.stud.Guardians.firstObject.name}}</span>
					{{/layout-push}}
					{{#layout-push direction='row' mid=false classNames='self_container' }}
						<span>关系</span><span>{{bm_stud_update_service.stud.Guardians.firstObject.relation_ship}}</span>
					{{/layout-push}}
					{{#layout-push direction='row' mid=false classNames='self_container' }}
						<span>联系方式</span><span>{{bm_stud_update_service.stud.Guardians.firstObject.contact}}</span>
					{{/layout-push}}
					{{#layout-push direction='row' mid=false classNames='self_container' }}
						<span>微信</span><span>{{bm_stud_update_service.stud.Guardians.firstObject.wechat}}</span>
					{{/layout-push}}
					{{#layout-push direction='row' mid=false classNames='self_container' }}
						<span>地址</span><span>{{bm_stud_update_service.stud.Guardians.firstObject.address}}</span>
					{{/layout-push}}
				</div>
			{{/layout-push }}
		{{/layout-push }}
	</div>
</div>

{{outlet}}
