<div class="detail_content_top">
    <div class="detail_page">
        {{#link-to 'courseReserve' class="reserve_detail_href_ref"}}
            返回
        {{/link-to}}
        <div class='detail_panel detail_margin_top detail_margin_top_big' >
            {{#layout-push direction='row' split=true classNames="reserve-detail-head"}}
                {{#layout-push direction='col' mid=true }}
                    {{#layout-push direction='col' classNames="detail_margin_top_left"}}
                        <span class="detail_panel_title_name">{{bm_exp_service.exp.SessionInfo.title}}</span>
                        {{#layout-push direction='row'}}
                        {{!-- <p class="detail_panel_role_num">累计预约人数&nbsp;&nbsp;{{reserve_number}}</p> --}}
                        <p class="detail_panel_role_num">死数据{{reserve_number}}</p>
                        {{/layout-push}}
                    {{/layout-push}}
                {{/layout-push}}
                {{#layout-push direction="row" classNames="reserve-detail-btn"}}
                    {{#bs-button classNames="reserve-code-btn"}}{{/bs-button}} 

                    {{#bs-button class="reserve-more-btn"}}{{/bs-button}}
                    {{!-- {{#link-to 'edit.course' classNames='course_add_btn'}}+ 创建活动{{/link-to}} --}}
                    {{!-- {{#bs-button onClick=(action (mut courseCode) true) classNames="reserve-code-btn"}}{{/bs-button}} --}}
                    {{#bs-button classNames="add_btn" onClick=(action (mut add_session) true)}}<span>+ 添加场次</span>{{/bs-button}}
                    {{#bs-modal open=add_session onHidden=(action (mut add_session) false) as |modal|}}
                        <div class="session-modal">
                            {{#modal.body}}
                                {{#layout-push direction='col' }}
                                    {{#layout-push direction='row'}}
                                        <p class="title">编辑场次</p>
                                    {{/layout-push}}
                                    {{#layout-push direction='row' classNames="line-list"}}
                                        <p class="subtitle">校区设置</p>
                                        {{#layout-push direction='col' }}
                                            <span class="radio-col">
                                                <input type="radio" name="rel" value="fa"/>
                                                <label for="">
                                                    {{#layout-push direction=row}}
                                                        <select class="session-modal-select" id='reservableselect' name="">
                                                            <option value="">选择已有场地</option>
                                                            {{#each course_lst as |item|}}
                                                                <option value={{item.id}}>{{item.course.name}}</option>
                                                            {{/each}}
                                                        </select>
                                                    {{/layout-push}}
                                                </label>
                                            </span>
                                            <span class="radio-col">
                                                <input type="radio" name="rel" value="ma"/>
                                                <label for="">其他场地</label>
                                            </span>
                                        {{/layout-push}}
                                    {{/layout-push}}
                                    {{#layout-push direction="row" classNames="line-list"}}
                                        <p class="subtitle">日期设置</p>
                                        {{bm-lay-date inputVal="2018-11-15"}}
                                    {{/layout-push}}
                                    {{#layout-push direction="row" classNames="line-list"}}
                                        <p class="subtitle">时间设置</p>
                                        {{bm-lay-date inputVal="2018-11-15"}}
                                    {{/layout-push}}
                                    {{#layout-push direction='row' classNames="line-area "}}
                                        <p class="subtitle">名额设置</p>
                                        {{#layout-push direction='col' }}
                                            <span class="radio-col">
                                                <input type="radio" name="rel" value="ma"/>
                                                <label for="">不限制</label>
                                            </span>
                                            <span class="radio-col">
                                                <input type="radio" name="rel" value="fa"/>
                                                <label for="">
                                                    <input type="text" name="" value="">
                                                </label>
                                            </span>
                                        {{/layout-push}}
                                    {{/layout-push}}
                                {{/layout-push}}
                            {{/modal.body}}
                            {{#modal.footer classNames="session-modal-footer"}}
                              {{#bs-button onClick=(action modal.close) classNames="cancel"}}取消{{/bs-button}}
                              {{#bs-button type="success" onClick=(action modal.submit) classNames="save"}}确定{{/bs-button}}
                            {{/modal.footer}}
                        </div>
                    {{/bs-modal}}
                    {{!-- <div local-class="modal-dialog">
                        {{#bs-modal open=courseCode onHidden=(action (mut courseCode) false) as |modal|}}
                            <div class="stud-modal">
                                {{#modal.body classNames="stud-modal-body"}}
                                  <img src="" local-class="code-img" alt="">
                                  <p local-class="title">课程预约详情</p>
                                {{/modal.body}}
                                {{#modal.footer classNames="stud-modal-footer"}}
                                  {{#bs-button onClick=(action modal.close)}}取消{{/bs-button}}
                                  {{#bs-button type="success" onClick=(action modal.submit)}}保存图片{{/bs-button}}
                                {{/modal.footer}}
                            </div>
                        {{/bs-modal}}
                    </div> --}}
                {{/layout-push}}
            {{/layout-push}}
        </div>

        {{!-- {{bmcom/bm-tabs-bar cur_idx=cur_idx titles=model.tabs}} --}}

        {{!-- {{#if (bmeq cur_idx 0)}}
        <table class='ib_table_head'>
            <tr>
                {{#each model.title as |item|}}
                    <th class='ib_table_item'>{{item}}</th>
                {{/each}}
            </tr>
            {{#each model.res.reserve_records as |item|}}
            <tr>
                <td class='ib_table_content_item'>{{bmdobformat item.res_date}}</td>
                <td class='ib_table_content_item'>{{item.yard.address}}</td>
                <td class="ib_table_content_item">{{bmattendeename item}}</td>
                <td class="ib_table_content_item">{{bmattendeecontact item}}</td>
                <td class="ib_table_content_item">签到</td>
            </tr>
            {{/each}}
        </table>
        {{/if}} --}}

        {{!-- {{#if (bmeq cur_idx 0)}} --}}
        <table class='ib_table_head exp_table'>
            <tr>
                {{#each tableTitle as |item|}}
                    <th class='ib_table_item'>{{item}}</th>
                {{/each}}
            </tr>
            {{#each tableContent as |item|}}
            <tr class="session-list">
                <td class='ib_table_content_item'>{{item.ind}}</td>
                <td class='ib_table_content_item'>{{item.kid}}</td>
                <td class="ib_table_content_item">{{item.birt}}</td>
                <td class="ib_table_content_item">{{item.sex}}</td>
                <td class="ib_table_content_item">{{item.contact}}</td>
                <td class="ib_table_content_item">{{item.channels}}</td>
                {{!-- <td class="ib_table_content_item">{{item.func}}</td> --}}
                <td class="ib_table_content_item">{{#bs-button class="reserve-more-btn"}}{{/bs-button}}</td>
                <td  class="ib_table_content_item"><a class="btn_sign">点击签到</a> </td>
            </tr>
            {{/each}}
        </table>
        {{!-- {{/if}} --}}

        {{!-- {{#if (bmeq cur_idx 1)}}
        <section class='alt_course_selection'>
            {{#layout-push direction='col' classNames='alt_course_container'}}
                {{#bmpage/bm-session-info session=bm_exp_service.exp.SessionInfo}}
                    {{#link-to 'edit.exp.info' bm_exp_service.exp.SessionInfo.id classNames='alt_course_btn'}}
                        编辑
                    {{/link-to}}
                {{/bmpage/bm-session-info}}
            {{/layout-push}}
        </section>
        {{/if}} --}}
    </div>
</div>
{{outlet}}
