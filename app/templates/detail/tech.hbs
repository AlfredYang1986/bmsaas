<div class="detail_content_top" >
    <div class="detail_page" >
        <div class='detail_panel' >
            {{#layout-push direction="row" split=true }}
                <p class="detail_head_name">教师详情</p>
                {{#link-to 'edit.tech' bm_tech_service.tech.id classNames='more_btn'}}
                    更多
                {{/link-to}}
            {{/layout-push}}
        </div>
        {{#layout-push direction="row"}}
            <div class='detail_panel detail_panel_col_between tech_info_card' >
                {{#layout-push direction="col" classNames="tech_info_base"}}
                    {{#if (bmcom/bm-nil-obj bm_tech_service.tech)}}
                    {{else}}
                    {{bmcom/bm-img-uploader needTag=false canEdit=false img=bm_tech_service.tech.icon}}
                    {{/if}}
                    <span class="detail_panel_role_name">{{bm_tech_service.tech.name}}</span>
                    {{!-- {{#layout-push direction="row"}}
                        <span class="detail_panel_role_des">
                            {{#if isFemale}}
                                女
                                <img src="../images/icon_female@2x.png" alt="" class="sex-icon">
                            {{/if}}
                            {{#if isMale}}
                                男
                                <img src="../images/icon_male@2x.png" alt="" class="sex-icon">
                            {{/if}}
                        </span>
                        <span class="detail_panel_role_des">{{bmdob/bmdob2age bm_tech_service.tech.dob}}岁</span>
                    {{/layout-push}} --}}
                    {{#bmdetail/stud-basis-left-subtitle gender=bm_tech_service.tech.gender dob=bm_tech_service.tech.dob}}{{/bmdetail/stud-basis-left-subtitle}}
                {{/layout-push}}
                {{#layout-push direction="col" classNames="tech_info_other"}}
                    {{#bmdetail/tech-basis-left-info label="联系方式" content=bm_tech_service.tech.contact}}{{/bmdetail/tech-basis-left-info}}
                    {{#bmdetail/tech-basis-left-info label="微信" content=bm_tech_service.tech.wechat}}{{/bmdetail/tech-basis-left-info}}
                    {{#bmdetail/tech-basis-left-info label="地址" content=bm_tech_service.tech.address}}{{/bmdetail/tech-basis-left-info}}
                    {{!-- {{#layout-push direction="row" classNames="tech_info_other_list"}}
                        <p>联系方式</p>
                        <span class='detail_panel_des_02'>{{bm_tech_service.tech.contact}}</span>
                    {{/layout-push}}
                    {{#layout-push direction="row" classNames="tech_info_other_list"}}
                        <p>微信</p>
                        <span class='detail_panel_des_02'>{{bm_tech_service.tech.wechat}}</span>
                    {{/layout-push}}
                    {{#layout-push direction="row" classNames="tech_info_other_list"}}
                        <p>地址</p>
                        <span class='detail_panel_des_02'>{{bm_tech_service.tech.address}}</span>
                    {{/layout-push}} --}}
                {{/layout-push}}
            </div>
            <div class='detail_panel detail_panel_col_between tech_info_detail' >
                {{#layout-push direction="col" classNames="tech_info_area"}}
                {{#bmdetail/tech-basis-right-info label="昵称" content=bm_tech_service.tech.nickname}}{{/bmdetail/tech-basis-right-info}}
                {{#bmdetail/tech-basis-right-info label="出生日期" content=(bmdob/bmdobformat bm_tech_service.tech.dob)}}{{/bmdetail/tech-basis-right-info}}
                {{#bmdetail/tech-basis-right-info label="来自城市" content=bm_tech_service.tech.nativePlace}}{{/bmdetail/tech-basis-right-info}}
                    {{!-- {{#layout-push direction="row" classNames="tech_info_area-item"}}
                        <p>昵称</p>
                        <span class='detail_panel_des_02'>{{bm_tech_service.tech.nickname}}</span>
                    {{/layout-push}}
                    {{#layout-push direction="row" classNames="tech_info_area-item"}}
                        <p>出生日期</p>
                        <span class='detail_panel_des_02'>{{bmdob/bmdobformat bm_tech_service.tech.dob}}</span>
                    {{/layout-push}}
                    {{#layout-push direction="row" classNames="tech_info_area-item"}}
                        <p>来自城市</p>
                        <span class='detail_panel_des_02'>{{bm_tech_service.tech.nativePlace}}</span>
                    {{/layout-push}} --}}
                {{/layout-push}}
                {{!-- {{#layout-push direction="col" classNames="tech_info_area"}}
                    <p>教育经历</p>
                    {{#layout-push direction="row"}}
                        <p class="period">2017.4 -2018.4 </p>
                        {{#layout-push direction="col"}}
                            <p>学校名称</p>
                            <p>本科·教育心理学</p>
                            <p>一段关于学习经历的描述</p>
                        {{/layout-push}}
                    {{/layout-push}}
                {{/layout-push}}
                {{#layout-push direction="col" classNames="tech_info_area"}}
                    <p>工作经历</p>
                    {{#layout-push direction="row"}}
                        <p class="period">2017.4 -2018.4 </p>
                        {{#layout-push direction="col"}}
                            <p>工作单位</p>
                            <p>职位</p>
                            <p>一段关于工作项目和成就的描述</p>
                        {{/layout-push}}
                    {{/layout-push}}
                {{/layout-push}} --}}
            </div>
        {{/layout-push}}
    </div>
</div>

{{outlet}}
