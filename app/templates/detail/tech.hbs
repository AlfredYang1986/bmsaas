<div class="detail_content_top tech_detail_content_top" >
    <div class="detail_page" >
        {{#bmcom/bm-breadcrumb urls=urls as |url|}}
            {{#if (not-eq url.id "")}}
                {{#link-to url.link url.id class="reserve_detail_href_ref"}}{{url.pageName}}{{/link-to}}
            {{else}}
                {{#link-to url.link class="reserve_detail_href_ref"}}{{url.pageName}}{{/link-to}}
            {{/if}}
        {{/bmcom/bm-breadcrumb}}
        {{#layout-push direction='row' split=true classNames="detail_title tech_detail_title"}}
			<span class="title_text">{{model.tech.name}}</span> 
        {{/layout-push}}
        {{#layout-push direction="col" classNames="detail_panel_tab_container"}}
            {{bmcom/bm-tabs-bar cur_idx=cur_idx titles=model.tabs}}
        {{/layout-push}}
        {{bmdetail/bm-top-title-panel title="教师信息" rightText="编辑" linkAddr='edit.tech' linkParam=model.tech.id}}

        {{#layout-push direction="row" classNames=""}}
            <div class='detail_panel detail_panel_col_between tech_info_card' >
                {{#layout-push direction="col" classNames="tech_info_base"}}
                    {{#if (bmcom/bm-nil-obj model.tech)}}
                    {{else}}
                        {{bmcom/bm-img-uploader needTag=false canEdit=false img=model.tech.icon}}
                    {{/if}}
                    <span class="detail_panel_role_name">{{model.tech.name}}</span>
                    {{bmdetail/stud-basis-left-subtitle gender=model.tech.gender dob=model.tech.dob contentBelow=""}}
                {{/layout-push}}
                {{#layout-push direction="col" classNames="tech_info_other"}}
                    {{bmdetail/tech-basis-left-info label="职务" content=model.tech.jobTitle}}
                    {{bmdetail/tech-basis-left-info label="手机号" content=model.tech.contact}}
                    {{bmdetail/tech-basis-left-info label="微信" content=model.tech.wechat}}
                {{/layout-push}}
            </div>
            <div class='detail_panel detail_panel_col_between tech_info_detail' >
                {{#layout-push direction="col" classNames="tech_info_area"}}
                    {{#layout-push direction="row" classNames="tech_info_area-item"}}
                        <p>类型</p>
                        {{#if (eq model.tech.jobType 1)}}
                            <span class='detail_panel_des_02'>正职</span>
                        {{else}}
                            <span class='detail_panel_des_02'>兼职</span>
                        {{/if}}
                    {{/layout-push}}
                    <div class="split-line"></div>
                    {{bmdetail/tech-basis-right-info label="昵称" content=model.tech.nickname}}
                    {{bmdetail/tech-basis-right-info label="出生日期" content=(bmdob/bmdobformat model.tech.dob)}}
                    {{bmdetail/tech-basis-right-info label="来自城市" content=model.tech.nativePlace}}
                    {{bmdetail/tech-basis-right-info label="地址" content=(bmcom/bm-trans-address model.tech)}}
                    <div class="split-line"></div>
                    {{bmdetail/tech-basis-right-info label="教龄" content=model.tech.teachYears contentBelow=" 年"}}
                    {{bmdetail/tech-basis-right-info label="擅长科目" content=model.tech.major}}
                {{/layout-push}}
                {{!-- {{#layout-push direction="col" classNames="tech_info_area"}}
                    <p>教育经历</p>
                    {{#layout-push direction="row"}}
                        <p class="period">2017.4 -2018.4 </p>
                        {{#layout-push direction="col"}}
                            <p>学校名称</p>
                            <p>本科·教育心理学</p>
                            <p>一段关于学习经历的描述</p>
                        {{/layout-push}}
                    {{/layout-push}}
                {{/layout-push}}
                {{#layout-push direction="col" classNames="tech_info_area"}}
                    <p>工作经历</p>
                    {{#layout-push direction="row"}}
                        <p class="period">2017.4 -2018.4 </p>
                        {{#layout-push direction="col"}}
                            <p>工作单位</p>
                            <p>职位</p>
                            <p>一段关于工作项目和成就的描述</p>
                        {{/layout-push}}
                    {{/layout-push}}
                {{/layout-push}} --}}
            </div>
        {{/layout-push}}
    </div>
</div>

{{outlet}}
