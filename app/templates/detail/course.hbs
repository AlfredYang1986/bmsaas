<section class='alt_course_selection alt_course_padding'>
    {{#bp-layout direction='col' classNames='alt_course_container'}}
    {{#bmcom/bm-breadcrumb urls=urls as |url|}}
        {{#if (not-eq url.id "")}}
            {{#link-to url.link url.id class="reserve_detail_href_ref"}}{{url.pageName}}{{/link-to}}
        {{else}}
            {{#link-to url.link class="reserve_detail_href_ref"}}{{url.pageName}}{{/link-to}}
        {{/if}}
    {{/bmcom/bm-breadcrumb}}
    {{!-- <div class='detail_panel course_margin_top_big detail_margin_bottom' > --}}
        {{bp-page-header/only-title-desc
            class='detail_margin_bottom'
            title=model.course.sessioninfo.title
            desc=model.course.sessioninfo.category.title}}
    {{!-- </div> --}}

    {{!-- <div class='detail_panel detail_margin_top course_margin_top_big detail_margin_bottom' >
        {{#bp-layout direction='row' main='between' classNames="reserve-detail-head"}}
            {{#bp-layout direction='col' main='center' }}
                {{#bp-layout direction='col' classNames="detail_margin_top_left"}}
                    <span class="detail_panel_title_name">{{model.course.sessioninfo.title}}</span>
                    {{#bp-layout direction='row'}}
                    <p class="detail_panel_role_num">{{model.course.sessioninfo.category.title}}</p>
                    {{/bp-layout}}
                {{/bp-layout}}
            {{/bp-layout}} --}}
            {{!-- {{#bp-layout direction="row" classNames="reserve-detail-btn"}}
                {{#bs-dropdown class="btn-dropdown" as |dd|}}
                    {{#dd.button class="reserve-more-btn"}}{{/dd.button}}
                    {{#dd.menu align="right" as |menu|}}
                        {{#menu.item align="right"}}
                            {{#bp-layout direction='col' classNames="dropdown-content"}}
                                <a class="warning" onclick={{action (mut deleteExpDlg) true dd.closeDropdown}}>删除课程</a>
                            {{/bp-layout}}
                        {{/menu.item}}
                    {{/dd.menu}}
                {{/bs-dropdown}}
                {{#bmcom/bm-warning-modal title="删除" mainBtnText="删除" type="error" switchParam=deleteExpDlg cancelHandled='cancelHandled' successHandled="onDeleteCourseClick"}}
                    <p class="warning-modal-body-content">您确定要删除课程「{{model.course.sessioninfo.title}}」吗？</p>
                {{/bmcom/bm-warning-modal}}
            {{/bp-layout}} --}}
        {{!-- {{/bp-layout}}
    </div> --}}
        {{#bmpage/bm-session-info session=model.course.sessioninfo}}
            {{bmdetail/bm-top-title-panel title="课程详情" rightText="编辑" linkAddr='edit.course' linkParam=model.course.sessioninfo.id linkParam2=model.course.id}}
        {{/bmpage/bm-session-info}}
    {{/bp-layout}}
</section>
