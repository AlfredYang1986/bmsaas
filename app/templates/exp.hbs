<div class="course_content_top">
	{{#bp-layout direction="col" classNames="course_content"}}
		{{#bp-page-header as |ph|}}
			{{#ph.body as |body|}}
				{{#body.left as |left|}}
					{{#left.item}}
						体验课
					{{/left.item}}
				{{/body.left}}
				{{#body.right}}
					{{#link-to 'edit.exp.rsb' classNames='p-btn primary'}}+ 创建体验课{{/link-to}}
				{{/body.right}}
			{{/ph.body}}
		{{/bp-page-header}}
		{{#if (eq page_count 0)}}
            <div class="reservable-empty-state">
                {{bp-empty-state/no-button src='/images/img_empty@2x.png' title="暂无体验课" desc="请创建体验课"}}
            </div>
		{{else}}
			{{bmcom/bm-card-area
				onCourseCardClicked=(action 'cardClicked')
				onRefreshDataComplete=(action 'refreshDataComplete')
				type='exp'
				curPage=pagenum}}
			{{bp-pagination
				totalPageCounts=page_count
				onClickPage=(action (mut pagenum))}}
		{{/if}}
	{{/bp-layout}}
</div>
{{outlet}}
