{{yield}}

{{#bp-layout direction='row' main='center' classNames='alt_course_detail_line'}}
    {{#bp-layout direction='row' main='center' classNames='alt_course_detail_half'}}
        {{#bp-layout direction='col' main='center' }}
            {{#if (bmeq infoCardData.alb -1)}}
                {{#bp-layout direction='row' main='center' }}
                    <span class='alt_course_detail_perperty'>不限年龄</span>
                {{/bp-layout}}
            {{else}}
                {{#bp-layout direction='row' main='center' }}
                    <span class='alt_course_detail_perperty'>{{infoCardData.alb}}-{{infoCardData.aub}} 岁</span>
                {{/bp-layout}}
            {{/if}}

            {{#bp-layout direction='row' main='center' }}
                <span class='alt_course_detail_perperty_des'>适应年龄</span>
            {{/bp-layout}}
        {{/bp-layout}}
    {{/bp-layout}}
    <div class="border-span"></div>
    {{#bp-layout direction='row' main='center' classNames='alt_course_detail_half'}}
        {{#bp-layout direction='col' main='center' }}
            {{#if (bmeq infoCardData.length -1)}}
                {{#bp-layout direction='row' main='center' }}
                    <span class='alt_course_detail_perperty'>不限时长</span>
                {{/bp-layout}}
            {{else}}
                {{#bp-layout direction='row' main='center' }}
                    <span class='alt_course_detail_perperty'>{{infoCardData.length}} 分钟</span>
                {{/bp-layout}}
            {{/if}}

            {{#bp-layout direction='row' main='center' }}
                <span class='alt_course_detail_perperty_des'>课程时长</span>
            {{/bp-layout}}
        {{/bp-layout}}
    {{/bp-layout}}
{{/bp-layout}}
