{{#bp-layout direction='col' classNames="alt_course_card"}}
	<img src={{cover}} class='alt_course_cover' />
	{{#if (eq exp.startDate -1)}}
		{{#if (eq exp.endDate -1)}}
			<div class='alt_course_field_closed_info'>
				<p class='alt_course_field_info_text'>未开放</p>
			</div>
		{{else}}
			<div class='alt_course_field_info'>
				<p class='alt_course_field_info_text'>开放中</p>
			</div>
		{{/if}}
	{{else}}
		<div class='alt_course_field_info'>
			<p class='alt_course_field_info_text'>开放中</p>
		</div>
	{{/if}}
	{{#bp-layout direction='col' main='center' classNames="alt_course_content"}}
		{{#bp-layout direction='col'}}
			<span class='alt_course_cat'>{{exp.sessioninfo.category.title}}</span>
			<span class='alt_course_title'>{{exp.sessioninfo.title}}</span>
			{{!-- <span class='alt_course_field_num'>个场次</span> --}}
		{{/bp-layout}}
	{{/bp-layout}}
{{/bp-layout}}
{{bmcom/bm-handle-promise
	promiseResovled=(action 'promiseResovled') 
	promiseObj=exp.sessioninfo}}