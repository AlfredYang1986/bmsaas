{{#layout-push direction='col' classNames="alt_course_card"}}
    <img src={{cover}} class='alt_course_cover' />
    {{#if (eq exp.start_date -1)}}
        {{#if (eq exp.end_date -1)}}
            <div class='alt_course_field_closed_info'>
                <p class='alt_course_field_info_text'>已关闭</p>
            </div>
        {{else}}
            <div class='alt_course_field_info'>
                <p class='alt_course_field_info_text'>开放中</p>
            </div>
        {{/if}}
    {{else}}
        <div class='alt_course_field_info'>
            <p class='alt_course_field_info_text'>开放中</p>
        </div>
    {{/if}}
    {{#layout-push direction='col' mid=true classNames="alt_course_content"}}
        {{#layout-push direction='col'}}
            <span class='alt_course_cat'>{{exp.SessionInfo.Cate.title}}·{{exp.SessionInfo.Cate.subtitle}}</span>
            <span class='alt_course_title'>{{exp.SessionInfo.title}}</span>
            <span class='alt_course_field_num'>个场次</span>
        {{/layout-push}}
    {{/layout-push}}
{{/layout-push}}
