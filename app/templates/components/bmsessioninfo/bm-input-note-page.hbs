<section id="start-story" class="alt_course_section" >
    {{#bp-layout direction='col' classNames='alt_course_panel edit_panel edit_ten_panel'}}
        <span class='alt_course_title alt_course_big_title'>须知</span>
        <span class='alt_course_title'>参与者须知</span>
        <span class='alt_course_des'>详细说明可以让参与者做好充分准备。如：着装建议、身体情况限制、 接送说明等。</span>
        {{!-- {{input type="text" class="edit_input" value=session.notice disabled=ifNoteInput}} --}}
        {{textarea value=session.notice disabled=ifNoteInput classNames='alt-edit-area' rows=5}}
        <div class="course-edit-check course-edit-check-low no-inc-margin">
            <span class="radio-inline" {{action 'noNote'}}>
                {{#if noteInput}}
                    <input type="checkbox" name="note"/>
                {{else}}
                    <input type="checkbox" name="note" checked='checked'/>
                {{/if}}

                <label for="female">无须知说明</label>
            </span>
        </div>
        {{yield}}
    {{/bp-layout}}
</section>
