<section id="start-story" class="alt_course_section" >
    {{#bp-layout direction='col' classNames='alt_course_panel edit_panel edit_second_panel'}}
        <span class='alt_course_title alt_course_big_title'>课程定价</span>
        {{bp-input
            classNames="mb-4"
            label='课程定价(元)'
            prepend='元'
            prependDirection='right'
            value=session.standardPrice
            onChange=(action (mut session.standardPrice))}}
        {{bp-input
            classNames="mb-4"
            label='标准课时(次)数'
            prepend='次'
            prependDirection='right'
            value=session.standardCourseCount
            onChange=(action (mut session.standardCourseCount))}}
        {{!-- {{bmform/bm-edit-line title='课程定价(元)' largeNumberInput=true inputVal=session.standardPrice classNames='input_area area-margin-bottom'}}

        {{bmform/bm-edit-line title='标准课时(次)数' largeNumberInput=true  inputVal=session.standardCourseCount classNames='input_area area-margin-bottom alt_course_title_top'}} --}}
        {{yield}}
    {{/bp-layout}}
</section>
