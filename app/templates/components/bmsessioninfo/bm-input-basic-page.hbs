<section id="start-story" class="alt_course_section" >
    {{#bp-layout direction='col' classNames='alt_course_panel edit_panel edit_second_panel'}}
        <span class='alt_course_title alt_course_big_title'>基本信息</span>

        {{#if (bmeq session.status 1)}}
            {{!-- <span class='alt_course_title'>体验课名称</span> --}}
            {{bp-input
				classNames="mb-4"
				label='体验课名称'
                helpText="生动、有趣的名称更能激发孩子们的好奇心。如：奇妙的色彩艺术之旅"
				value=model.stud.name
				onChange=(action (mut model.stud.name))}}
        {{else}}
            {{bp-input
				classNames="mb-4"
				label='活动名称'
                helpText="生动、有趣的名称更能激发孩子们的好奇心。如：奇妙的色彩艺术之旅"
				value=model.stud.name
				onChange=(action (mut model.stud.name))}}
            {{!-- <span class='alt_course_title'>活动名称</span> --}}
        {{/if}}
        {{!-- <span class='alt_course_des'>生动、有趣的名称更能激发孩子们的好奇心。</span>
        <span class='alt_course_des'>如：奇妙的色彩艺术之旅</span>
        {{input type="text" class="edit_input" value=session.title}} --}}

        {{#bp-layout direction="col" classNames="alt-course-input-group"}}
            {{#if (bmeq session.status 1)}}
                {{!-- <span class='alt_course_title'>体验课时长（分钟）</span> --}}
                {{bp-dropdown-simple
                    disabled=lengthDisableFlag
                    classNames='mb-4'
                    title="体验课时长（分钟）"
                    choosedValue=cur_time
                    options=sel_time
                    optionKey='name'}}
            {{else}}
                {{bp-dropdown-simple
                    disabled=lengthDisableFlag
                    classNames='mb-4'
                    title="活动时长（分钟）"
                    choosedValue=cur_time
                    options=sel_time
                    optionKey='name'}}
                {{!-- <span class='alt_course_title'>活动时长（分钟）</span> --}}
            {{/if}}
            <div class="course-edit-check course-edit-check-low" {{action 'lengthNoSelected'}}>
                <span class="radio-inline">
                    <input type="checkbox" name="length" value="l"/>
                    <label for="female">不限时长</label>
                </span>
            </div>
            {{!-- {{#bp-layout direction="col" classNames="alt-course-age-group"}}
                {{#if lengthIf}}
                    {{bmform/bm-base-select type='number' options=sel_time curSelect=cur_time}}
                    <div class="course-edit-check course-edit-check-low" {{action 'lengthNoSelected'}}>
                        <span class="radio-inline">
                            <input type="checkbox" name="length" value="l"/>
                            <label for="female">不限时长</label>
                        </span>
                    </div>
                {{else}}
                    <select class="" name="" disabled>
                        <option value="">请选择</option>
                    </select>
                    <div class="course-edit-check course-edit-check-low" {{action 'lengthNoSelected'}}>
                        <span class="radio-inline">
                            <input type="checkbox" name="length" value="ma" checked='checked'/>
                            <label for="female">不限时长</label>
                        </span>
                    </div>
                {{/if}}
            {{/bp-layout}} --}}
        {{/bp-layout}}

        {{#bp-layout direction='col' classNames='select-age'}}
            <span class='alt_course_title alt_course_title_age'>适宜年龄</span>
            <div class="course-edit-check">
                {{#if ageInput}}
                    {{#bp-layout direction="row" classNames="alt-course-age-group"}}
                        {{bmform/bm-edit-line haveHeader=false ageInput=true inputVal=session.alb maxlength="2" classNames=''}}
                        {{!-- <div class="input-group">
                            {{input value=session.alb  maxlength='2' class="edit_input_age"  type="number" key-press=(action "onKeyPress")}}
                            <div class="input-group-append">
                                <span class="input-group-text">岁</span>
                            </div>
                        </div> --}}
                        <span class="alt_course_des">至</span>
                        {{bmform/bm-edit-line haveHeader=false ageInput=true inputVal=session.aub maxlength="2" classNames=''}}
                        {{!-- <div class="input-group">
                            {{input value=session.aub class="edit_input_age"  type="number"  maxlength='2' key-press=(action "onKeyPress")}}
                            <div class="input-group-append">
                                <span class="input-group-text">岁</span>
                            </div>
                        </div> --}}
                    {{/bp-layout}}
                    <div class="course-edit-check course-edit-check-age">
                        {{#bmform/age-select-input alb=session.alb aub=session.aub ageSelect=(action 'ageSelect')}}
                        {{/bmform/age-select-input}}
                    </div>
                {{else}}
                    {{#bp-layout direction="row" classNames="alt-course-age-group"}}
                        {{bmform/bm-edit-line haveHeader=false ageInput=true inputVal="" maxlength="2" readonly='readonly' classNames=''}}
                        {{!-- <div class="input-group">
                            {{input value='' maxlength='2' class="edit_input_age" readonly='readonly'  type="number" key-press=(action "onKeyPress")}}
                            <div class="input-group-append">
                                <span class="input-group-text">岁</span>
                            </div>
                        </div> --}}
                        <span class="alt_course_des">至</span>
                        {{bmform/bm-edit-line haveHeader=false ageInput=true inputVal="" maxlength="2" readonly='readonly' classNames=''}}
                        {{!-- <div class="input-group">
                            {{input value='' class="edit_input_age"  type="number" readonly='readonly'  maxlength='2' key-press=(action "onKeyPress")}}
                            <div class="input-group-append">
                                <span class="input-group-text">岁</span>
                            </div>
                        </div> --}}
                    {{/bp-layout}}
                    <div class="course-edit-check course-edit-check-age">
                        {{#bmform/age-select-input alb=session.alb aub=session.aub ageSelect=(action 'ageSelect') checked='checked'}}
                        {{/bmform/age-select-input}}
                    </div>
                {{/if}}
            </div>
        {{/bp-layout}}

        {{yield}}
    {{/bp-layout}}
</section>
