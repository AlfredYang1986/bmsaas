{{#bp-layout direction="row" wrap=true classNames="course-card-wrap"}}
    {{#if (bmeq type 'course')}}
        {{#each course as |item|}}
            <div class="line_container_warp course_card_container" >
                {{bmcard/course-card onCourseCardClicked=onCourseCardClicked course=item}}
            </div>
        {{/each}}
    {{else}}
        {{#each course as |item|}}
            <div class="line_container_warp course_card_container" >
                {{bmcard/bm-reservable-card onCourseCardClicked=onCourseCardClicked exp=item}}
            </div>
        {{/each}}
    {{/if}}
{{/bp-layout}}
