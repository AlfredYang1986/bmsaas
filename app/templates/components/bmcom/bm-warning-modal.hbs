{{#if (eq type "error")}}
    {{#bmcom/bm-modal-container title="" mswitch=switchParam
            needSubmit=true
            cancelbtncss='exp-modal-cancel'
            successbtncss='exp-modal-delete'
            canceltext='取消'
            successtext=mainBtnText
            backdropClose=false
            onCancelBtnClicked=(action 'cancelHandled')
            onSuccessBtnClicked=(action 'successHandled')}}
        {{#bp-layout direction='col' classNames="warning-modal"}}
            {{#bp-layout direction='row' classNames="warning-modal-title"}}
                <img class="warning-modal-title-pic" src="/images/icon_status_error@2x.png"/>
                <p class="warning-modal-title-content">{{title}}</p>
            {{/bp-layout}}
            {{#bp-layout direction='col' classNames="warning-modal-body"}}
                {{yield}}
            {{/bp-layout}}
        {{/bp-layout}}
    {{/bmcom/bm-modal-container}}
{{else if (eq type "normal")}}
    {{#bmcom/bm-modal-container title="" mswitch=switchParam
            needSubmit=true
            cancelbtncss='exp-modal-cancel'
            successbtncss='exp-modal-normal'
            canceltext='取消'
            successtext=mainBtnText
            backdropClose=false
            onCancelBtnClicked=(action 'cancelHandled')
            onSuccessBtnClicked=(action 'successHandled')}}
        {{#bp-layout direction='col' classNames="warning-modal"}}
            {{#bp-layout direction='row' classNames="warning-modal-title"}}
                <img class="warning-modal-title-pic" src="/images/icon_status_error@2x.png"/>
                <p class="warning-modal-title-content">{{title}}</p>
            {{/bp-layout}}
            {{#bp-layout direction='col' classNames="warning-modal-body"}}
                {{yield}}
            {{/bp-layout}}
        {{/bp-layout}}
    {{/bmcom/bm-modal-container}}
{{else}}
    {{#bmcom/bm-modal-container title="" mswitch=switchParam
            needSubmit=true
            cancelbtncss='exp-modal-cancel'
            successbtncss='exp-modal-warning'
            canceltext='取消'
            successtext=mainBtnText
            backdropClose=false
            onCancelBtnClicked=(action 'cancelHandled')
            onSuccessBtnClicked=(action 'successHandled')}}
        {{#bp-layout direction='col' classNames="warning-modal"}}
            {{#bp-layout direction='row' classNames="warning-modal-title"}}
                <img class="warning-modal-title-pic" src="/images/icon_status_warning@2x.png"/>
                <p class="warning-modal-title-content">{{title}}</p>
            {{/bp-layout}}
            {{#bp-layout direction='col' classNames="warning-modal-body"}}
                {{yield}}
            {{/bp-layout}}
        {{/bp-layout}}
    {{/bmcom/bm-modal-container}}
{{/if}}
