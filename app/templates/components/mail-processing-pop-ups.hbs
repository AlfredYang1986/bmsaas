   {{#layout-push direction=col}}
        {{#layout-push direction=col classNames="course-reserve-content"}}
            {{#layout-push direction=row classNames="line-list"}}
                <p class="course-reserve-label"><span class="base-info">提交时间 {{display_apply_date}}</span></p>
                {{get display_apply_date}}
            {{/layout-push}}
            {{#if courseReserve}}
                {{#layout-push direction=col}}

                    {{#layout-push direction=row classNames="line-area"}}
                        {{#layout-push direction=row classNames="line-list"}}
                            <p class="course-reserve-label"><span class="base-info">请与参与者确认参与内容及安排</span></p>
                        {{/layout-push}}
                        <p class="btn btn-primary experience-apply-btn" {{action 'experienceApply'}}>活动</p>
                        <p class="btn btn-primary course-reserve-btn"  {{action 'courseReserve'}}>体验课</p>

                    {{/layout-push}}
                    {{#layout-push direction=row classNames="line-list"}}
                        <p class="course-reserve-label list-title">参与内容</p>
                            <select class="course-reserve-modal-select" id='reservableselect' name="" onChange={{action 'reservableChanged'}}>
                                <option value="">课程标题</option>
                                {{!-- {{#each course_lst as |item|}} --}}
                                {{#each bm_exp_service.exps as |item|}}
                                    <option value={{item.id}}>{{item.SessionInfo.title}}</option>
                                {{/each}}
                            </select>
                    {{/layout-push}}
                    {{#layout-push direction=row classNames="line-area"}}
                        <p class="course-reserve-label list-title">期望时间</p>
                            <select class="course-reserve-modal-select" id='yardselect' name="" onChange={{action 'yardChanged'}}>
                                <option value="">场地位置</option>
                                {{!-- {{#each yard_lst as |item|}} --}}
                                {{#each bm_sessionable_service.sessionables as |item|}}
                                    <option value={{item.id}}>{{bmdob/bmdobformat item.start_date}} - {{item.Yard.address}}</option>
                                {{/each}}
                                {{exp_session_lst}}
                            </select>
                    {{/layout-push}}
                    {{!-- {{#layout-push direction=row classNames="line_container"}}
                        <p class="course-reserve-label">时间</p>
					    {{bm-lay-date inputVal=apply.apply_time}}
                    {{/layout-push}} --}}
                    {{#layout-push direction=row classNames="line_container line-list"}}
                        <p class="course-reserve-label">联系方式</p>
                        <p class="course-reserve-content">{{apply.contact}}</p>
                    {{/layout-push}}
                    {{#layout-push direction=row classNames="line_container line-list"}}
                        <p class="course-reserve-label">申请者</p>
                        <p class="course-reserve-content">{{apply.Applyee.name}}</p>
                    {{/layout-push}}

                    <p class="course-reserve-label list-title">参与者信息</p>
                    {{#layout-push direction=row classNames="line-list line_container"}}
                            {{#each apply.Kids as |item|}}
                                {{bmcard/bm-kid-card kid=item classNames="card-info"}}
                            {{/each}}
                    {{/layout-push}}
                {{/layout-push}}
            {{/if}}
            {{#if experienceApply}}
                {{#layout-push direction=col}}

                    {{#layout-push direction=row classNames="line-area"}}
                        {{#layout-push direction=row classNames="line-list"}}
                            <p class="course-reserve-label"><span class="base-info">请与参与者确认参与内容及安排</span></p>
                        {{/layout-push}}
                        {{!-- <p class="btn btn-primary experience-apply-btn" {{action 'experienceApply'}}></p>
                        <p class="btn btn-primary course-reserve-btn"  {{action 'courseReserve'}}></p> --}}
                        <p class="btn btn-primary course-reserve-btn " {{action 'experienceApply'}}>活动</p>
                        <p class="btn btn-primary experience-apply-btn" {{action 'courseReserve'}}>体验课</p>
                    {{/layout-push}}
                    {{#layout-push direction=row classNames="line-list"}}
                        <p class="course-reserve-label list-title">参与内容</p>
                            <select class="course-reserve-modal-select" id='actselect' name="" onChange={{action 'activityChanged'}}>
                                <option value="">活动标题</option>
                                {{!-- {{#each activity_lst as |item|}} --}}
                                {{#each bm_actv_service.actvs as |item|}}
                                    <option value={{item.id}}>{{item.SessionInfo.title}}</option>
                                {{/each}}
                            </select>
                    {{/layout-push}}
                    {{#layout-push direction=row classNames="line-area"}}
                        <p class="course-reserve-label list-title">期望时间</p>
                            {{!-- <select class="course-reserve-modal-select" id='sessionselect' name="" onChange={{action 'sessionChanged'}}>
                                <option value="">场地位置</option>
                                {{#each session_lst as |item|}}
                                    <option value={{item.id}}>{{item.yard.address}}</option>
                                {{/each}}
                            </select> --}}
                            <select class="course-reserve-modal-select" id='sessionselect' name="" onChange={{action 'sessionChanged'}}>
                                <option value="">场地</option>
                                {{!-- {{#each bm_yard_service.yards as |item|}} --}}
                                    {{!-- <option value={{item.id}}>{{item.address}}</option> --}}
                                {{!-- {{/each}} --}}
                                {{#each bm_sessionable_service.sessionables as |item|}}
                                    <option value={{item.id}}>{{bmdob/bmdobformat item.start_date}} - {{item.Yard.address}}</option>
                                {{/each}}
                                {{act_session_lst}}
                            </select>
                    {{/layout-push}}
                    {{!-- {{#layout-push direction=row classNames="line_container"}}
                        <p class="course-reserve-label">时间</p>
                        {{bm-lay-date inputVal=apply.apply_time}}
                    {{/layout-push}} --}}
                    {{#layout-push direction=row classNames="line_container line-list"}}
                        <p class="course-reserve-label">联系方式</p>
                        <p class="course-reserve-content">{{apply.contact}}</p>
                    {{/layout-push}}
                    {{#layout-push direction=row classNames="line_container line-list"}}
                        <p class="course-reserve-label">申请者</p>
                        <p class="course-reserve-content">{{apply.Applyee.name}}</p>
                    {{/layout-push}}

                    <p class="course-reserve-label list-title">参与者信息</p>
                    {{#layout-push direction=row classNames="line-list line_container"}}
                        {{#each apply.Kids as |item|}}
                            {{bmcard/bm-kid-card kid=item classNames="card-info"}}
                        {{/each}}
                    {{/layout-push}}
                {{/layout-push}}
            {{/if}}
        {{/layout-push}}
   {{/layout-push}}
{{yield}}
