   {{#bp-layout direction='col'}}
        {{#bp-layout direction='col' classNames="course-reserve-content"}}
            {{#bp-layout direction='row' main='between' classNames='content-title-area'}}
                <p class="title">预约处理</p>
            {{/bp-layout}}

            {{#if formErrorFlag}}
                <div class="form-checked">
                    {{#bp-layout direction='row' classNames="error-line"}}
                        <img class="error" src="https://bm-web.oss-cn-beijing.aliyuncs.com/icon_status_error%402x.png" alt="">
                        <span class="error-info">请填写完整信息</span>
                    {{/bp-layout}}
                </div>
            {{/if}}

            {{#if courseReserve}}
                {{#bp-layout direction='col'}}
                    {{#if noteError}}
                        <div class="form-checked">
                            {{#bp-layout direction='row' classNames="error-line"}}
                                <img class="error" src={{errorImg}} alt="">
                                <span class="error-info">请填写完整信息</span>
                            {{/bp-layout}}
                        </div>
                    {{/if}}
                    {{#bp-layout direction='row'  classNames='content-title-area'}}
                         <span class="base-info">申请时间：{{display_apply_date}}</span>
                    {{/bp-layout}}
                    {{#bp-layout direction='row' classNames="line-list"}}
                        <p class="course-reserve-label list-title">类型</p>
                        {{#bp-layout direction='row'}}
                            <p class="btn btn-primary experience-apply-btn" {{action 'toggleAction'}}>活动</p>
                            <p class="btn btn-primary course-reserve-btn" >体验课</p>
                        {{/bp-layout}}
                    {{/bp-layout}}

                    {{#bp-layout direction='row' classNames="line-list"}}
                        {{!-- <p class="course-reserve-label select-title">参与内容</p> --}}
                        {{#if noSr}}
                            {{#bmform/bm-label-form-container label='参与内容'}}
                                {{bp-dropdown-simple
                                    classNames="error-border"
                                    valueId=selectedReservable
                                    options=expSession
                                    optionKey='title'
                                    onChange=(action 'reservableChanged')}}
