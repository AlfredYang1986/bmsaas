{{!-- {{yield}} --}}
<select onchange={{action 'changeYear' value="target.value"}} class="course-select-time">
    <option>年</option>
    {{#each years as |item|}}
        {{#if (eq item selectedYear)}}
            <option selected=true value={{item}}>{{item}}</option>
        {{else}}
            <option value={{item}}>{{item}}</option>
        {{/if}}
    {{/each}}
</select>
