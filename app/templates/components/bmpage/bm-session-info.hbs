{{#layout-push direction='row' split=true classNames='alt_course_panel alt_course_top_panel'}}
    {{#layout-push direction='col' mid=true}}
        <span class='alt_course_title'>课程详情</span>
    {{/layout-push}}
    {{#layout-push direction='col' mid=true}}
        {{yield}}
    {{/layout-push}}
{{/layout-push}}
{{#layout-push direction='row' split=true}}
    {{#layout-push direction='col' classNames='alt_course_left_panel'}}
        {{#layout-push direction='col' classNames='alt_course_panel'}}
            {{#layout-push direction='row' mid=true classNames='alt_course_deltail_title'}}
                {{session.title}}
            {{/layout-push}}
            {{#layout-push direction='row' mid=true classNames='alt_course_detail_cat'}}
                {{session.Cate.title}}·{{session.Cate.subtitle}}
            {{/layout-push}}
            {{#layout-push direction='row' mid=true classNames='alt_course_detail_line'}}
                {{#layout-push direction='row' mid=true classNames='alt_course_detail_half'}}
                    {{#layout-push direction='col' mid=true }}
                        {{#layout-push direction='row' mid=true }}
                            <span class='alt_course_detail_perperty'>{{session.alb}}-{{session.aub}} 岁</span>
                        {{/layout-push}}
                        {{#layout-push direction='row' mid=true }}
                            <span class='alt_course_detail_perperty_des'>适应年龄</span>
                        {{/layout-push}}
                    {{/layout-push}}
                {{/layout-push}}
                {{#layout-push direction='row' mid=true classNames='alt_course_detail_half'}}
                    {{#layout-push direction='col' mid=true }}
                        {{#layout-push direction='row' mid=true }}
                            <span class='alt_course_detail_perperty'>{{session.level}}</span>
                        {{/layout-push}}
                        {{#layout-push direction='row' mid=true }}
                            <span class='alt_course_detail_perperty_des'>等级</span>
                        {{/layout-push}}
                    {{/layout-push}}
                {{/layout-push}}
            {{/layout-push}}
            <div class='alt_course_deatil_split_line'> </div>
            {{#layout-push direction='row' mid=true classNames='alt_course_detail_line'}}
                {{#layout-push direction='row' mid=true classNames='alt_course_detail_half'}}
                    {{#layout-push direction='col' mid=true }}
                        {{#layout-push direction='row' mid=true }}
                            <span class='alt_course_detail_perperty'>{{session.count}} 课时</span>
                        {{/layout-push}}
                        {{#layout-push direction='row' mid=true }}
                            <span class='alt_course_detail_perperty_des'>预计课时数</span>
                        {{/layout-push}}
                    {{/layout-push}}
                {{/layout-push}}
                {{#layout-push direction='row' mid=true classNames='alt_course_detail_half'}}
                    {{#layout-push direction='col' mid=true }}
                        {{#layout-push direction='row' mid=true }}
                            <span class='alt_course_detail_perperty'>{{session.length}} 分钟</span>
                        {{/layout-push}}
                        {{#layout-push direction='row' mid=true }}
                            <span class='alt_course_detail_perperty_des'>课程时长</span>
                        {{/layout-push}}
                    {{/layout-push}}
                {{/layout-push}}
            {{/layout-push}}
            {{#layout-push direction='row' mid=true classNames='alt_course_detail_pic'}}
                {{#layout-push direction='row' mid=true classNames='alt_course_detail_pic_left'}}
                    <img src={{cover}} class="img_left">
                {{/layout-push}}
                {{#layout-push direction='col' classNames='alt_course_detail_pic_right'}}
                    {{#layout-push direction='row' classNames='alt_course_detail_pic_right_top'}}
                        <img src={{cover}} class="img_right">
                    {{/layout-push}}
                    {{#layout-push direction='row' classNames='alt_course_detail_pic_right_bottom'}}
                        <img src={{cover}} class="img_right">
                        <button class="more-pic-link" {{action 'openMorePic'}}>查看更多</button>
                    {{/layout-push}}
                {{/layout-push}}
            {{/layout-push}}
        {{/layout-push}}
    {{/layout-push}}

    {{#layout-push direction='col' classNames='alt_course_panel alt_course_right_panel'}}
        {{#layout-push direction='col' classNames='alt_course_detail_panel'}}
            <span class='alt_right_panel_perperty_title'>教育理念和模式</span>
            {{#if (bmcom/bm-nil-array session.tags)}}
                {{#layout-push direction='row' mid=true}}
                    <span class='alt_right_panel_perperty_des'>请上传信息</span>
                {{/layout-push}}
            {{else}}
                {{#layout-push direction='row'}}
                    {{#each session.tags as |item|}}
                        <span class='alt_yard_detail_tag'>{{item}}</span>
                    {{/each}}
                {{/layout-push}}
            {{/if}}
        {{/layout-push}}
        {{#layout-push direction='col' classNames='alt_course_detail_panel'}}
            <span class='alt_right_panel_perperty_title'>课程目标</span>
            <span class='alt_right_panel_perperty_des'>{{session.target}}</span>
        {{/layout-push}}
        {{#layout-push direction='col' classNames='alt_course_detail_panel'}}
            <span class='alt_right_panel_perperty_title'>课程计划</span>
            <span class='alt_right_panel_perperty_des'>{{session.planning}}</span>
        {{/layout-push}}
        {{#layout-push direction='col' classNames='alt_course_detail_panel'}}
            <span class='alt_right_panel_perperty_title'>课程内容</span>
            <span class='alt_right_panel_perperty_des'>{{session.description}}</span>
        {{/layout-push}}

    {{/layout-push}}
{{/layout-push}}

{{#bs-modal class="more-pic-modal" id="myModal" fade=false open=isMorePic onHidden=(action (mut isMorePic) false) as |modal|}}
    {{#modal.header}}

    {{/modal.header}}
    {{#modal.body class="more-pic-modal-body"}}
        {{#layout-push direction='col' classNames='more-pic-outer'}}
            {{#layout-push direction='row' classNames='more-pic-title'}}
                <button class="close-more-pic-btn" {{action 'closeMorePic'}}>X</button>
            {{/layout-push}}
            {{#layout-push direction='row' mid=true classNames='more-pic-main'}}
                <img src={{cover}} class="img-main">
            {{/layout-push}}
            {{#layout-push direction='row' mid=true classNames='more-pic-list'}}
                {{#layout-push direction='row' classNames='more-pic-list-left'}}
                    <button class="close-more-pic-btn" {{action 'closeMorePic'}}>&lt;</button>
                {{/layout-push}}
                {{#layout-push direction='row' classNames='more-pic-list-mid'}}
                    {{#layout-push direction='col' split=true classNames='more-pic-list-each'}}
                        <img src={{cover}} class="list-each-img">
                        <p class="list-each-img-des">123</p>
                    {{/layout-push}}
                    {{#layout-push direction='col' split=true classNames='more-pic-list-each'}}
                        <img src={{cover}} class="list-each-img">
                        <p class="list-each-img-des">123</p>
                    {{/layout-push}}
                    {{#layout-push direction='col' split=true classNames='more-pic-list-each'}}
                        <img src={{cover}} class="list-each-img">
                        <p class="list-each-img-des">123</p>
                    {{/layout-push}}
                    {{#layout-push direction='col' split=true classNames='more-pic-list-each'}}
                        <img src={{cover}} class="list-each-img">
                        <p class="list-each-img-des">123</p>
                    {{/layout-push}}
                {{/layout-push}}
                {{#layout-push direction='row' classNames='more-pic-list-right'}}
                    <button class="close-more-pic-btn" {{action 'closeMorePic'}}>&gt;</button>
                {{/layout-push}}
            {{/layout-push}}
        {{/layout-push}}
    {{/modal.body}}
    {{#modal.footer}}

    {{/modal.footer}}
{{/bs-modal}}