{{#layout-push direction='row' split=true classNames='alt_course_panel'}}
    {{#layout-push direction='col' mid=true}}
        <span class='alt_course_title'>课程详情</span>
    {{/layout-push}}
    {{#layout-push direction='col' mid=true}}
        {{yield}}
    {{/layout-push}}
{{/layout-push}}
{{#layout-push direction='row' split=true}}
    {{#layout-push direction='col' classNames='alt_course_left_panel'}}
        {{#layout-push direction='col' classNames='alt_course_panel'}}
        {{#layout-push direction='row' mid=true classNames='alt_course_deltail_title'}}
            {{session.title}}
        {{/layout-push}}
        {{#layout-push direction='row' mid=true classNames='alt_course_detail_cat'}}
            {{session.Cate.title}}·{{session.Cate.subtitle}}
        {{/layout-push}}
        {{#layout-push direction='row' mid=true classNames='alt_course_detail_line'}}
            {{#layout-push direction='row' mid=true classNames='alt_course_detail_half'}}
                {{#layout-push direction='col' mid=true }}
                    {{#layout-push direction='row' mid=true }}
                        <span class='alt_course_detail_perperty'>{{session.alb}}-{{session.aub}} 岁</span>
                    {{/layout-push}}
                    {{#layout-push direction='row' mid=true }}
                        <span class='alt_course_detail_perperty_des'>适应年龄</span>
                    {{/layout-push}}
                {{/layout-push}}
            {{/layout-push}}
            {{#layout-push direction='row' mid=true classNames='alt_course_detail_half'}}
                {{#layout-push direction='col' mid=true }}
                    {{#layout-push direction='row' mid=true }}
                        <span class='alt_course_detail_perperty'>{{session.level}}</span>
                    {{/layout-push}}
                    {{#layout-push direction='row' mid=true }}
                        <span class='alt_course_detail_perperty_des'>等级</span>
                    {{/layout-push}}
                {{/layout-push}}
            {{/layout-push}}
        {{/layout-push}}
        <div class='alt_course_deatil_split_line'> </div>
        {{#layout-push direction='row' mid=true classNames='alt_course_detail_line'}}
            {{#layout-push direction='row' mid=true classNames='alt_course_detail_half'}}
                {{#layout-push direction='col' mid=true }}
                    {{#layout-push direction='row' mid=true }}
                        <span class='alt_course_detail_perperty'>{{session.count}} 课时</span>
                    {{/layout-push}}
                    {{#layout-push direction='row' mid=true }}
                        <span class='alt_course_detail_perperty_des'>预计课时数</span>
                    {{/layout-push}}
                {{/layout-push}}
            {{/layout-push}}
            {{#layout-push direction='row' mid=true classNames='alt_course_detail_half'}}
                {{#layout-push direction='col' mid=true }}
                    {{#layout-push direction='row' mid=true }}
                        <span class='alt_course_detail_perperty'>{{session.length}} 分钟</span>
                    {{/layout-push}}
                    {{#layout-push direction='row' mid=true }}
                        <span class='alt_course_detail_perperty_des'>课程时长</span>
                    {{/layout-push}}
                {{/layout-push}}
            {{/layout-push}}
        {{/layout-push}}
        {{/layout-push}}
    {{/layout-push}}

    {{#layout-push direction='col' classNames='alt_course_panel alt_course_right_panel'}}
        {{#layout-push direction='col' classNames='alt_course_detail_panel'}}
            <span class='alt_right_panel_perperty_title'>教育理念和模式</span>
            {{#if (bmcom/bm-nil-array session.tags)}}
                {{#layout-push direction='row' mid=true}}
                    <span class='alt_right_panel_perperty_des'>请上传信息</span>
                {{/layout-push}}
            {{else}}
                {{#layout-push direction='row'}}
                    {{#each session.tags as |item|}}
                        <span class='alt_yard_detail_tag'>{{item}}</span>
                    {{/each}}
                {{/layout-push}}
            {{/if}}
        {{/layout-push}}
        {{#layout-push direction='col' classNames='alt_course_detail_panel'}}
            <span class='alt_right_panel_perperty_title'>课程目标</span>
            <span class='alt_right_panel_perperty_des'>{{session.target}}</span>
        {{/layout-push}}
        {{#layout-push direction='col' classNames='alt_course_detail_panel'}}
            <span class='alt_right_panel_perperty_title'>课程计划</span>
            <span class='alt_right_panel_perperty_des'>{{session.planning}}</span>
        {{/layout-push}}
        {{#layout-push direction='col' classNames='alt_course_detail_panel'}}
            <span class='alt_right_panel_perperty_title'>课程内容</span>
            <span class='alt_right_panel_perperty_des'>{{session.description}}</span>
        {{/layout-push}}

    {{/layout-push}}
{{/layout-push}}