{{!-- {{yield}} --}}
<select class="start-time" onchange={{action 'changeProvinces' value="target.value"}}>
    <option>省份</option>
    {{#each provinces as |item|}}
        {{#if (eq model.region.province.id item.id)}}
            <option selected=true value={{item.id}}>{{item.name}}</option>
        {{else}}
            <option value={{item.id}}>{{item.name}}</option>
        {{/if}}
        
    {{/each}}
</select>
