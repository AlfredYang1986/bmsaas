{{#layout-push direction="row" split=true}}
    {{#layout-push direction="row" classNames="title-area"}}
        {{#unless notitlt}}
            <span class="edit_subtitle" >{{title}}</span>
        {{/unless}}
        {{#if notNeeded}}
            <div class="v_end must">
                <span class="edit_required" >(选填)</span>
            </div>
        {{/if}}
    {{/layout-push}}
    <div class="v_end">
        <span class="edit_condition" >{{countHint}}</span>
    </div>
{{/layout-push}}

{{#layout-push direction="row" classNames="input-group"}}
    {{#if (eq group 'prepend')}}
        <div class="input-group-prepend">
             {{yield}}
        </div>
    {{/if}}
    {{#if largeInput}}
        {{input classNames="edit_text_field_large" placeholder=pholder value=inputVal}}
    {{else if accountInput}}
        {{input classNames="edit_text_field_login" placeholder=pholder value=inputVal}}
    {{else if passwordInput}}
        {{input classNames="edit_text_field_login" placeholder=pholder value=inputVal}}
    {{else if numberInput}}
        <input class="edit_text_field" placeholder={{pholder}} value={{inputVal}} onkeypress="return (/[\d]/.test(String.fromCharCode(event.keyCode)))"/>
    {{else}}
        {{input classNames="edit_text_field" placeholder=pholder value=inputVal}}
    {{/if}}
    {{#if (eq group 'append')}}
        <div class="input-group-append">
            {{yield}}
        </div>
    {{/if}}
    {{#if (eq group undefined)}}
       {{yield}}
    {{/if}}
{{/layout-push}}
