{{#bp-layout direction="col"}}
    {{#bp-layout direction="row" }}
        <span class="edit_title">{{title}}</span>
    {{/bp-layout }}
    {{#bp-layout direction="row" classNames='edit_title_des_between'}}
        <div class="edit_des">
            <span>{{subtitle}}</span>
        </div>
    {{/bp-layout }}
    {{#bp-layout direction="row" main='between' }}
        {{#if isNeeded}}
        {{#bp-layout direction="row" }}
            <div class="v_end">
                <span class="edit_required" >* 必填</span>
            </div>
        {{/bp-layout }}
        {{/if}}
        <div class="v_end">
            <span class="edit_condition" >{{countHint}}</span>
        </div>
    {{/bp-layout }}
    {{textarea classNames='edit_text_area' rows=rowsAmount value=inputVal }}
{{/bp-layout }}

{{yield}}
