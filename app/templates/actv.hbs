<div class="course_content_top">
	{{#bp-layout direction="col" classNames="course_content"}}
		{{!-- {{#bp-layout direction="row" main='between' classNames="course-title-flex"}}
			<p class="page_title">活动</p>
			{{#link-to 'edit.actv.rsb' classNames='p-btn primary'}}+ 创建活动{{/link-to}}
		{{/bp-layout}} --}}
		{{#bp-page-header as |ph|}}
			{{#ph.body as |body|}}
				{{#body.left as |left|}}
					{{#left.item}}
						活动
					{{/left.item}}
				{{/body.left}}
				{{#body.right}}
					{{#link-to 'edit.actv.rsb' classNames='p-btn primary'}}+ 创建活动{{/link-to}}
				{{/body.right}}
			{{/ph.body}}
		{{/bp-page-header}}
		{{#if (eq page_count 0)}}
			{{bp-empty-state/no-button
					class="reservable-empty-state"
					src='/images/img_empty@2x.png'
					title="暂无活动"
					desc="请创建活动"
				}}
			{{!-- {{bmcom/bm-empty-state
				class="reservable-empty-state" 
				picUrl="/images/img_empty@2x.png" 
				title="暂无活动" 
				des="请创建活动"}} --}}
		{{else}}
			{{bmcom/bm-card-area
				onCourseCardClicked=(action 'cardClicked')  
				onRefreshDataComplete=(action 'refreshDataComplete') 
				type='actv' 
				curPage=pagenum}}
			{{!-- {{bmcom/bm-pagination
				pageCount=page_count 
				curPage=pagenum 
				sendPageNum=(action "handlePageChange")}} --}}
			{{bp-pagination
				totalPageCounts=page_count 
				onClickPage=(action (mut pagenum))}}
		{{/if}}
	{{/bp-layout}}
</div>
{{outlet}}